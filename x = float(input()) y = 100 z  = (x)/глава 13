print("\n13.42:")
trains = [
    {"number": 1, "route": "Москва-Санкт-Петербург", "arrive_h": 10, "arrive_m": 30, "depart_h": 10, "depart_m": 45},
    {"number": 2, "route": "Казань-Нижний Новгород", "arrive_h": 11, "arrive_m": 15, "depart_h": 11, "depart_m": 30},
    {"number": 3, "route": "Екатеринбург-Челябинск", "arrive_h": 12, "arrive_m": 0, "depart_h": 12, "depart_m": 20}
]

# Заданное время
check_h = 11
check_m = 20

print(f"Поезда на станции в {check_h:02d}:{check_m:02d}:")
for train in trains:
    arrive_time = train["arrive_h"] * 60 + train["arrive_m"]
    depart_time = train["depart_h"] * 60 + train["depart_m"]
    check_time = check_h * 60 + check_m
    
    if arrive_time <= check_time < depart_time:
        print(f"  №{train['number']} {train['route']}")

# 13.43
print("\n13.43:")
passengers = [
    {"items": 2, "weight": 35.5},
    {"items": 1, "weight": 20.0},
    {"items": 3, "weight": 45.0},
    {"items": 1, "weight": 24.5},
    {"items": 4, "weight": 60.0}
]

# а) более двух вещей
count_more_than_2 = sum(1 for p in passengers if p["items"] > 2)
print(f"а) Пассажиров с >2 вещами: {count_more_than_2}")

# б) одна вещь < 25 кг
has_one_item_under_25 = any(p["items"] == 1 and p["weight"] < 25 for p in passengers)
print(f"б) Есть пассажир с одной вещью <25кг: {has_one_item_under_25}")

# в) больше среднего числа вещей
total_items = sum(p["items"] for p in passengers)
avg_items = total_items / len(passengers)
count_above_avg = sum(1 for p in passengers if p["items"] > avg_items)
print(f"в) Пассажиров с вещами > среднего ({avg_items:.1f}): {count_above_avg}")

# г) средний вес отличается не более чем на 0.5 кг
total_weight = sum(p["weight"] for p in passengers)
avg_weight_per_item = total_weight / total_items

print(f"г) Средний вес вещи: {avg_weight_per_item:.2f} кг")
for i, p in enumerate(passengers, 1):
    if p["items"] > 0:
        item_avg_weight = p["weight"] / p["items"]
        if abs(item_avg_weight - avg_weight_per_item) <= 0.5:
            print(f"   Багаж №{i}: средний вес {item_avg_weight:.2f} кг")

