# 13.20
print("\n13.20:")
surnames = ["Иванов", "Петров", "Сидоров"]
phones = ["123-45-67", "234-56-78", "345-67-89"]

print("а) Поиск телефона по фамилии:")
search_surname = "Петров"
for i in range(len(surnames)):
    if surnames[i] == search_surname:
        print(f"Телефон {search_surname}: {phones[i]}")
        break
else:
    print(f"{search_surname} не найден")

print("\nб) Поиск по номеру телефона:")
search_phone = "234-56-78"
for i in range(len(phones)):
    if phones[i] == search_phone:
        print(f"Телефон {search_phone} принадлежит: {surnames[i]}")
        break
else:
    print(f"Телефон {search_phone} не найден")

# 13.21
print("\n13.21:")
# Создаем структуру для учеников
students = []
students.append({"surname": "Иванов", "name": "Иван", "address": "ул. Ленина 1", "school": 15, "grade": 10})
students.append({"surname": "Петров", "name": "Петр", "address": "ул. Пушкина 5", "school": 20, "grade": 9})
students.append({"surname": "Сидоров", "name": "Алексей", "address": "ул. Гагарина 10", "school": 15, "grade": 11})
students.append({"surname": "Кузнецов", "name": "Дмитрий", "address": "ул. Мира 3", "school": 20, "grade": 8})

# Заданная школа
target_school = 15

# Создаем новый массив для учеников старших классов заданной школы
senior_students = []
for student in students:
    if student["school"] == target_school and student["grade"] in [10, 11]:
        senior_students.append(student)

print("Ученики старших классов школы", target_school, ":")
for student in senior_students:
    print(f"{student['surname']} {student['name']}, {student['address']}")

# 13.22
print("\n13.22:")
precipitation = [5.2, 3.1, 0.0, 12.5, 2.3]  # мм осадков
temperatures = [3, -2, 5, -5, 1]  °C

snow = 0
rain = 0

for i in range(len(precipitation)):
    if temperatures[i] > 0:
        rain += precipitation[i]
    else:
        snow += precipitation[i]

print(f"Дождь: {rain} мм")
print(f"Снег: {snow} мм")

