# 13.53
print("\n13.53:")
n = 5
teams = ["Спартак", "ЦСКА", "Зенит", "Динамо", "Локомотив"]

# Таблица результатов (0-проигрыш, 1-ничья, 3-выигрыш)
# Главная диагональ = 0
results = [
    [0, 3, 1, 0, 3],
    [0, 0, 3, 1, 3],
    [1, 0, 0, 3, 1],
    [3, 1, 0, 0, 3],
    [0, 0, 1, 0, 0]
]

# Рассчитываем очки для каждой команды
team_stats = []
for i in range(n):
    wins = draws = losses = points = 0
    for j in range(n):
        if i != j:
            if results[i][j] == 3:
                wins += 1
                points += 3
            elif results[i][j] == 1:
                draws += 1
                points += 1
            else:
                losses += 1
    team_stats.append({
        "name": teams[i],
        "wins": wins,
        "draws": draws,
        "losses": losses,
        "points": points
    })

# а) больше побед, чем проигрышей
print("а) Команды с победами > проигрышей:")
for stats in team_stats:
    if stats["wins"] > stats["losses"]:
        print(f"  {stats['name']}")

# б) без проигрышей
print("\nб) Команды без проигрышей:")
for stats in team_stats:
    if stats["losses"] == 0:
        print(f"  {stats['name']}")

# в) чемпион
champion = max(team_stats, key=lambda x: x["points"])
print(f"\nв) Чемпион: {champion['name']} ({champion['points']} очков)")

# г) проверка порядка
print("\nг) Проверка порядка команд:")
sorted_by_points = sorted(team_stats, key=lambda x: x["points"], reverse=True)
is_correct_order = all(team_stats[i]["points"] == sorted_by_points[i]["points"] for i in range(n))

if is_correct_order:
    print("  Команды расположены правильно")
else:
    print("  Команды расположены неправильно")
    for i in range(n):
        if team_stats[i]["points"] != sorted_by_points[i]["points"]:
            print(f"  Нарушение у команды: {team_stats[i]['name']}")
            break

# д) порядок команд по местам
print("\nд) Порядок команд по местам:")
for i, stats in enumerate(sorted_by_points, 1):
    print(f"{i:2}. {stats['name']} - {stats['points']} очков (В:{stats['wins']} Н:{stats['draws']} П:{stats['losses']})")

# 13.54
print("\n13.54:")
n_teams = 4
n_games = 3

teams = ["Спартак", "ЦСКА", "Зенит", "Динамо"]

# Результаты матчей: команда i против команды j
matches = [
    [  # Спартак (0)
        None,  # против себя
        {"scored": 2, "conceded": 1},  # против ЦСКА
        {"scored": 1, "conceded": 1},  # против Зенита
        {"scored": 3, "conceded": 0}   # против Динамо
    ],
    [  # ЦСКА (1)
        {"scored": 1, "conceded": 2},  # против Спартака
        None,  # против себя
        {"scored": 2, "conceded": 2},  # против Зенита
        {"scored": 0, "conceded": 1}   # против Динамо
    ],
    [  # Зенит (2)
        {"scored": 1, "conceded": 1},  # против Спартака
        {"scored": 2, "conceded": 2},  # против ЦСКА
        None,  # против себя
        {"scored": 2, "conceded": 1}   # против Динамо
    ],
    [  # Динамо (3)
        {"scored": 0, "conceded": 3},  # против Спартака
        {"scored": 1, "conceded": 0},  # против ЦСКА
        {"scored": 1, "conceded": 2},  # против Зенита
        None  # против себя
    ]
]

# а) таблица очков
print("а) Таблица чемпионата:")
team_stats = []
for i in range(n_teams):
    wins = draws = losses = points = 0
    for j in range(n_teams):
        if i != j and matches[i][j]:
            if matches[i][j]["scored"] > matches[i][j]["conceded"]:
                wins += 1
                points += 3
            elif matches[i][j]["scored"] == matches[i][j]["conceded"]:
                draws += 1
                points += 1
            else:
                losses += 1
    team_stats.append({
        "name": teams[i],
        "wins": wins,
        "draws": draws,
        "losses": losses,
        "points": points
    })

for stats in team_stats:
    print(f"  {stats['name']}: {stats['points']} очков (В:{stats['wins']} Н:{stats['draws']} П:{stats['losses']})")

# б) количество ничьих (не используя таблицу)
draw_count = 0
for i in range(n_teams):
    for j in range(i+1, n_teams):
        if matches[i][j] and matches[i][j]["scored"] == matches[i][j]["conceded"]:
            draw_count += 1
print(f"\nб) Количество ничьих: {draw_count}")

# в) игры с разницей >= 3
big_diff_count = 0
for i in range(n_teams):
    for j in range(i+1, n_teams):
        if matches[i][j]:
            diff = abs(matches[i][j]["scored"] - matches[i][j]["conceded"])
            if diff >= 3:
                big_diff_count += 1
print(f"в) Игр с разницей >=3: {big_diff_count}")

# г) статистика каждой команды
print("\nг) Статистика команд:")
for stats in team_stats:
    print(f"  {stats['name']}: В:{stats['wins']} Н:{stats['draws']} П:{stats['losses']}")

# д) очки каждой команды
print("\nд) Очки команд:")
for stats in team_stats:
    print(f"  {stats['name']}: {stats['points']} очков")

# е) чемпион
champion = max(team_stats, key=lambda x: x["points"])
print(f"\nе) Чемпион: {champion['name']} ({champion['points']} очков)")

# 13.55
print("\n13.55:")
# Две таблицы для костей домино
left = [4, 3, 0, 6, 2, 5, 1]
right = [3, 3, 3, 0, 2, 5, 1]

# Случай 1: левая таблица - левая половина, правая - правая половина
print("Случай 1 (левая=левая половина, правая=правая половина):")
is_valid = True
violating_bone = -1

for i in range(1, len(left)):
    if right[i-1] != left[i]:
        is_valid = False
        violating_bone = i
        break

if is_valid:
    print("  Кости выложены правильно по правилам домино")
else:
    print(f"  Нарушение на кости №{violating_bone+1}")
    print(f"  Правая сторона кости {violating_bone}: {right[violating_bone-1]}")
    print(f"  Левая сторона кости {violating_bone+1}: {left[violating_bone]}")

# Случай 2: каждая таблица может содержать любую половину
print("\nСлучай 2 (любая половина в любой таблице):")
is_valid = True
violating_bone = -1

for i in range(1, len(left)):
    if right[i-1] != left[i] and right[i-1] != right[i] and left[i-1] != left[i] and left[i-1] != right[i]:
        is_valid = False
        violating_bone = i
        break

if is_valid:
    print("  Кости выложены правильно по правилам домино")
else:
    print(f"  Нарушение на кости №{violating_bone+1}")

# Используем записи для хранения костей домино
print("\nИспользование записей для хранения костей:")
dominoes = []
for i in range(len(left)):
    dominoes.append({"left": left[i], "right": right[i]})

print("Кости домино:")
for i, domino in enumerate(dominoes, 1):
    print(f"  Кость {i}: [{domino['left']}|{domino['right']}]")
