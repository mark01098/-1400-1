# 13.30
print("\n13.30:")
surnames = ["Иванов", "Петров", "Сидоров"]
# Оценки по 3 предметам для каждого ученика
grades = [
    [5, 4, 5, 4],  # Иванов
    [3, 4, 3, 5],  # Петров
    [5, 5, 4, 5]   # Сидоров
]

# Средние оценки учеников
student_averages = []
for student_grades in grades:
    avg = sum(student_grades) / len(student_grades)
    student_averages.append(avg)

# Средняя оценка класса
class_average = sum(student_averages) / len(student_averages)

print("Средние оценки учеников:")
for i in range(len(surnames)):
    print(f"{surnames[i]}: {student_averages[i]:.2f}")
print(f"\nСредняя оценка класса: {class_average:.2f}")

print("\nУченики с оценкой выше средней по классу:")
for i in range(len(surnames)):
    if student_averages[i] > class_average:
        print(surnames[i])

# 13.31
print("\n13.31:")
materials = ["Сталь", "Алюминий", "Дерево", "Стекло"]
masses = [10, 5, 3, 8]  # кг
volumes = [0.0013, 0.0019, 0.006, 0.003]  # м³

max_density = 0
for i in range(len(materials)):
    density = masses[i] / volumes[i]
    if density > max_density:
        max_density = density

print(f"Максимальная плотность материала: {max_density:.2f} кг/м³")

# 13.32
print("\n13.32:")
countries = ["Россия", "Китай", "Индия", "США"]
populations = [146.7, 1402.0, 1380.0, 331.9]  # млн чел.
areas = [17125, 9597, 3287, 9834]  # тыс. км²

max_density = 0
for i in range(len(countries)):
    density = populations[i] * 1000000 / (areas[i] * 1000)  # чел/км²
    if density > max_density:
        max_density = density

print(f"Максимальная плотность населения: {max_density:.2f} чел/км²")

# 13.33
print("\n13.33:")
materials = ["Сталь", "Алюминий", "Дерево", "Стекло"]
masses = [10, 5, 3, 8]
volumes = [0.0013, 0.0019, 0.006, 0.003]

min_density = float('inf')
min_material = ""
for i in range(len(materials)):
    density = masses[i] / volumes[i]
    if density < min_density:
        min_density = density
        min_material = materials[i]

print(f"Материал с минимальной плотностью: {min_material} ({min_density:.2f} кг/м³)")

