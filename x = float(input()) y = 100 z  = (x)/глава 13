# 13.38
print("\n13.38:")
teams = ["Спартак", "ЦСКА", "Зенит", "Динамо"]
points = [65, 70, 68, 60]

# а) чемпион
max_points = max(points)
champion_index = points.index(max_points)
print(f"а) Чемпион: {teams[champion_index]} ({max_points} очков)")

# б) второе и третье места
sorted_points = sorted(points, reverse=True)
second_points = sorted_points[1]
third_points = sorted_points[2]

second_index = points.index(second_points)
third_index = points.index(third_points)
print(f"б) Второе место: {teams[second_index]}, третье место: {teams[third_index]}")

# в) первое и второе места за один проход
first_team = ""
second_team = ""
first_points = -1
second_points = -1

for i in range(len(teams)):
    if points[i] > first_points:
        second_points = first_points
        second_team = first_team
        first_points = points[i]
        first_team = teams[i]
    elif points[i] > second_points:
        second_points = points[i]
        second_team = teams[i]

print(f"в) Первое место: {first_team}, второе место: {second_team}")

