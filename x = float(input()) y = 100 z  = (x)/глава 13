print("\n13.44:")
matches = [
    {"scored": 3, "conceded": 1},
    {"scored": 1, "conceded": 1},
    {"scored": 0, "conceded": 2},
    {"scored": 2, "conceded": 0},
    {"scored": 1, "conceded": 2}
]

wins = draws = losses = points = 0

print("а) Результаты игр:")
for i, match in enumerate(matches, 1):
    if match["scored"] > match["conceded"]:
        result = "выигрыш"
        wins += 1
        points += 3
    elif match["scored"] == match["conceded"]:
        result = "ничья"
        draws += 1
        points += 1
    else:
        result = "проигрыш"
        losses += 1
    print(f"  Игра {i}: {match['scored']}:{match['conceded']} - {result}")

print(f"б) Количество выигрышей: {wins}")
print(f"в) Выигрышей: {wins}, проигрышей: {losses}")
print(f"г) Выигрышей: {wins}, ничьих: {draws}, проигрышей: {losses}")
print(f"д) Общее число очков: {points}")

