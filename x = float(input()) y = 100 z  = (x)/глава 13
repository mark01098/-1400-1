# 13.7
print("\n13.7:")
surnames = ["Иванов", "Петров", "Сидоров"]
addresses = ["ул. Ленина 1", "ул. Пушкина 5", "ул. Гагарина 10"]
phones_num = [1234567, 3456789, 3123456]  # вариант 1
phones_str = ["123-45-67", "345-67-89", "312-34-56"]  # вариант 2

print("Случай 1 (7 цифр):")
for i in range(len(surnames)):
    if str(phones_num[i]).startswith('3'):
        print(f"{surnames[i]}, {addresses[i]}")

print("\nСлучай 2 (формат):")
for i in range(len(surnames)):
    if phones_str[i].startswith('3'):
        print(f"{surnames[i]}, {addresses[i]}")

# 13.8
print("\n13.8:")
surnames = ["Иванов", "Петров", "Сидоров"]
names = ["Иван", "Петр", "Алексей"]
addresses = ["ул. Ленина 1", "ул. Пушкина 5", "ул. Гагарина 10"]
phones_num = [1234567, 0, 3123456]  # 0 - нет телефона
phones_str = ["123-45-67", "", "312-34-56"]  # "" - нет телефона

print("Случай 1 (7 цифр):")
for i in range(len(surnames)):
    if phones_num[i] == 0:
        print(f"{surnames[i]} {names[i]}, {addresses[i]}")

print("\nСлучай 2 (формат):")
for i in range(len(surnames)):
    if phones_str[i] == "":
        print(f"{surnames[i]} {names[i]}, {addresses[i]}")

