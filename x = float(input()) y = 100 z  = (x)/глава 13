# 13.26
print("\n13.26:")
journals = ["Наука", "Техника", "Спорт", "Мода"]
prices = [150, 200, 100, 250]  # руб.
circulation = [5000, 12000, 8000, 15000]  # экз.

total_price = 0
count = 0
for i in range(len(journals)):
    if circulation[i] < 10000:
        total_price += prices[i]
        count += 1

if count > 0:
    average_price = total_price / count
    print(f"Средняя стоимость журналов с тиражом <10000: {average_price:.2f} руб.")
else:
    print("Нет журналов с тиражом <10000")

