second_max_height = max(heights_without_max)
second_max_index = heights.index(second_max_height)
print(f"б) Два самых высоких (без абсолютного): {surnames[max_index]} и {surnames[second_max_index]}")

# в) два самых высоких за один проход
first_height = -1
second_height = -1
first_surname = ""
second_surname = ""

for i in range(len(surnames)):
    if heights[i] > first_height:
        second_height = first_height
        second_surname = first_surname
        first_height = heights[i]
        first_surname = surnames[i]
    elif heights[i] > second_height:
        second_height = heights[i]
        second_surname = surnames[i]

print(f"в) Два самых высоких: {first_surname} и {second_surname}")

