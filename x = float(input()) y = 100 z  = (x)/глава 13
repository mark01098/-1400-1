# 13.12
print("\n13.12:")
import datetime
surnames = ["Иванов", "Петров", "Сидоров"]
names = ["Иван", "Петр", "Алексей"]
patronymics = ["Иванович", "Петрович", "Алексеевич"]
addresses = ["ул. Ленина 1", "ул. Пушкина 5", "ул. Гагарина 10"]
hire_months = [3, 6, 9]  # месяцы
hire_years = [2020, 2021, 2022]  # годы

today = datetime.datetime.now()
current_year = today.year
current_month = today.month

print("Сотрудники, проработавшие не менее 3 лет:")
for i in range(len(surnames)):
    years_worked = current_year - hire_years[i]
    if current_month < hire_months[i]:
        years_worked -= 1
    
    if years_worked >= 3:
        print(f"{surnames[i]} {names[i]} {patronymics[i]}, {addresses[i]}")

# 13.13
print("\n13.13:")
products = ["Хлеб", "Молоко", "Сыр"]
rubles = [30, 80, 250]
kopeeks = [50, 0, 30]

# Сравниваем первый и второй товары
price1 = rubles[0] * 100 + kopeeks[0]
price2 = rubles[1] * 100 + kopeeks[1]

if price1 > price2:
    print(f"{products[0]} дороже {products[1]}")
elif price1 < price2:
    print(f"{products[1]} дороже {products[0]}")
else:
    print(f"{products[0]} и {products[1]} стоят одинаково")

# 13.14
print("\n13.14:")
hours = [10, 14, 23]
minutes = [30, 15, 45]

# Сравниваем первый и второй моменты времени
time1 = hours[0] * 60 + minutes[0]
time2 = hours[1] * 60 + minutes[1]

if time1 < time2:
    print(f"{hours[0]}:{minutes[0]:02d} было раньше, чем {hours[1]}:{minutes[1]:02d}")
elif time1 > time2:
    print(f"{hours[1]}:{minutes[1]:02d} было раньше, чем {hours[0]}:{minutes[0]:02d}")
else:
    print("Времена совпадают")

# 13.15
print("\n13.15:")
years = [2020, 2021, 2022]
months = [5, 8, 3]
days = [10, 15, 20]
events = ["Событие А", "Событие Б", "Событие В"]

# Сравниваем первое и второе события
date1 = years[0] * 10000 + months[0] * 100 + days[0]
date2 = years[1] * 10000 + months[1] * 100 + days[1]

print("а) По порядковому номеру:")
if date1 > date2:
    print("Первое событие произошло позже")
else:
    print("Второе событие произошло позже")

print("\nб) По тексту:")
if date1 > date2:
    print(f"{events[0]} произошло позже, чем {events[1]}")
else:
    print(f"{events[1]} произошло позже, чем {events[0]}")

# 13.16
print("\n13.16:")
hours = [10, 14, 10]
minutes = [30, 15, 30]
seconds = [20, 45, 25]

time1 = hours[0] * 3600 + minutes[0] * 60 + seconds[0]
time2 = hours[1] * 3600 + minutes[1] * 60 + seconds[1]
time3 = hours[2] * 3600 + minutes[2] * 60 + seconds[2]

print(f"Сравниваем {hours[0]}:{minutes[0]:02d}:{seconds[0]:02d} и {hours[1]}:{minutes[1]:02d}:{seconds[1]:02d}:")
if time1 < time2:
    print("Первый момент был раньше")
else:
    print("Второй момент был раньше")

# 13.17
print("\n13.17:")
surnames = ["Кузин", "Петров", "Куравлев", "Сидоров", "Кудин"]
addresses = ["ул. Ленина 1", "ул. Пушкина 5", "ул. Гагарина 10", "ул. Мира 3", "ул. Солнечная 7"]
target_surnames = ["Кузин", "Куравлев", "Кудин", "Кульков", "Кубиков"]

print("Работают ли люди с указанными фамилиями:")
found = False
for i in range(len(surnames)):
    if surnames[i] in target_surnames:
        print(f"{surnames[i]} - {addresses[i]}")
        found = True

if not found:
    print("Людей с такими фамилиями не найдено")

