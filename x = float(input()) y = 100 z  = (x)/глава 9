        print(f"Первая половина: '{word[:half]}'")
    else:
        print("Слово должно быть чётной длины.")

def task_9_23():
    print("\n=== 9.23 Срез слова с m-й по n-ю буквы ===")
    word = input("Введите слово: ")
    m = int(input("Начало среза (m): "))
    n = int(input("Конец среза (n): "))
    if 0 <= m <= n < len(word):
        print(f"Срез: '{word[m:n+1]}'")
    else:
        print("Некорректные значения.")

