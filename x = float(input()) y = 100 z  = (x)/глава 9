    print(f"Писатель {author} — автор романа {novel}.")

def task_9_6():
    print("\n=== 9.6 Обмен названий стран ===")
    s1 = "Россия"
    s2 = "Франция"
    print(f"Исходно: s1 = {s1}, s2 = {s2}")
    t1 = s2
    t2 = s1
    print(f"После обмена: t1 = {t1}, t2 = {t2}")

def task_9_7():
    print("\n=== 9.7 Количество символов ===")
    club = input("Введите название футбольного клуба: ")
    print(f"Количество символов: {len(club)}")

def task_9_8():
    print("\n=== 9.8 Чётность длины названия города ===")
    city = input("Введите название города: ")
    length = len(city)
    if length % 2 == 0:
        print("Количество символов чётное.")
    else:
        print("Количество символов нечётное.")

def task_9_9():
    print("\n=== 9.9 Какая фамилия длиннее ===")
    surname1 = input("Введите первую фамилию: ")
    surname2 = input("Введите вторую фамилию: ")
    if len(surname1) > len(surname2):
        print(f"Фамилия '{surname1}' длиннее.")
    elif len(surname2) > len(surname1):
        print(f"Фамилия '{surname2}' длиннее.")
    else:
        print("Фамилии одинаковой длины.")

def task_9_10():
    print("\n=== 9.10 Самое длинное и короткое название ===")
    city1 = input("Введите первый город: ")
    city2 = input("Введите второй город: ")
    city3 = input("Введите третий город: ")
    cities = [city1, city2, city3]
    longest = max(cities, key=len)
    shortest = min(cities, key=len)
    print(f"Самое длинное: {longest}")
    print(f"Самое короткое: {shortest}")

def task_9_11():
    print("\n=== 9.11 Обмен значений строковых переменных ===")
    s1 = "Испания"
    s2 = "Италия"
    print(f"До обмена: s1 = {s1}, s2 = {s2}")
    s1, s2 = s2, s1
    print(f"После обмена: s1 = {s1}, s2 = {s2}")

def task_9_12():
    print("\n=== 9.12 Обмен значений трёх строковых переменных ===")
    a, b, c = "первая", "вторая", "третья"
    print(f"Исходно: a = {a}, b = {b}, c = {c}")
    
    # Схема а
    temp = b
    b = c
    c = temp
    temp = a
    a = b
    b = temp
    print(f"Схема а: a = {a}, b = {b}, c = {c}")
    
    # Схема б
    a, b, c = "первая", "вторая", "третья"
    b, c, a = a, b, c
    print(f"Схема б: a = {a}, b = {b}, c = {c}")

