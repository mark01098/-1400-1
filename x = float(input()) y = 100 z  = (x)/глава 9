def task_9_15():
    print("\n=== 9.15 k-й символ слова ===")
    word = input("Введите слово: ")
    k = int(input("Введите номер символа k: "))
    if 0 <= k < len(word):
        print(f"Символ под номером {k}: '{word[k]}'")
    else:
        print("Такого номера в слове нет.")

def task_9_16():
    print("\n=== 9.16 Сравнение второго и четвёртого символов ===")
    word = input("Введите слово: ")
    if len(word) >= 4:
        if word[1] == word[3]:
            print("Второй и четвёртый символы одинаковы.")
        else:
            print("Второй и четвёртый символы разные.")
    else:
        print("Слово слишком короткое.")

def task_9_17():
    print("\n=== 9.17 Проверка первой и последней буквы ===")
