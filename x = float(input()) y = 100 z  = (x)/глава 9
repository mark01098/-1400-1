text = "программа и алгоритм"
print(f"Было: '{text}'")
space_positions = []
for i in range(len(text)):
    if text[i] == ' ':
        space_positions.append(i + 1)  # +1 потому что позиция, а не индекс

# Удаляем с конца, чтобы позиции не смещались
space_positions.sort(reverse=True)
new_text = text
for pos in space_positions:
    new_text = remove_char(new_text, pos)

print(f"Удалили все пробелы: '{new_text}'")


