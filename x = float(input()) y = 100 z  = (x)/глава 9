if has_a1:
    print(f"Первая 'а' на позиции: {pos1}")

print(f"\nТекст: '{text2}'")
print(f"Есть буква 'а'? {has_a2}")

# 9.78. 
print("\n9.78:")
words = ["топот", "казак", "мадам", "привет", "ротор"]

def is_palindrome(word):
    n = len(word)
    for i in range(n // 2):
        if word[i] != word[n - 1 - i]:
            return False
    return True

for word in words:
    print(f"Слово '{word}' - перевертыш? {is_palindrome(word)}")

