def task_9_71():
    print("\n=== 9.71 Сравнение букв 'м' и 'н' ===")
    sentence = input("Введите предложение: ")
    count_m = 0
    count_n = 0
    
    for char in sentence.lower():
        if char == 'м':
            count_m += 1
        elif char == 'н':
            count_n += 1
    
    print(f"Букв 'м': {count_m}, букв 'н': {count_n}")
    if count_m > count_n:
        print("Букв 'м' больше")
    elif count_n > count_m:
        print("Букв 'н' больше")
    else:
        print("Букв 'м' и 'н' одинаковое количество")

def task_9_72():
    print("\n=== 9.72 Проверка количества слов > 3 ===")
    sentence = input("Введите предложение (слова через один пробел): ").strip()
    count = 1 if sentence else 0
    for char in sentence:
        if char == ' ':
            count += 1
    if count > 3:
        print(f"Да, слов больше трех ({count})")
    else:
        print(f"Нет, слов не больше трех ({count})")

def task_9_73():
    print("\n=== 9.73 Какая буква встречается позже: 'с' или 'т' ===")
    sentence = input("Введите предложение: ")
    last_c = -1
    last_t = -1
    
    for i in range(len(sentence)):
        if sentence[i].lower() == 'с':
            last_c = i
        elif sentence[i].lower() == 'т':
            last_t = i
    
    if last_c == -1 and last_t == -1:
        print("В предложении нет ни 'с', ни 'т'")
    elif last_c == -1:
        print("Буква 'т' встречается позже (буквы 'с' нет)")
    elif last_t == -1:
        print("Буква 'с' встречается позже (буквы 'т' нет)")
    elif last_c > last_t:
        print(f"Буква 'с' встречается позже (позиция {last_c+1})")
    else:
        print(f"Буква 'т' встречается позже (позиция {last_t+1})")

def task_9_74():
    print("\n=== 9.74 Пять одинаковых символов подряд ===")
    text = input("Введите текст: ")
    found = False
    for i in range(len(text)-4):
        if text[i] == text[i+1] == text[i+2] == text[i+3] == text[i+4]:
            found = True
            print(f"Найдены 5 одинаковых символов '{text[i]}' на позициях {i+1}-{i+5}")
            break
    if not found:
        print("Нет пяти одинаковых символов подряд")
