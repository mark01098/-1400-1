            print(char)

def task_9_55():
    print("\n=== 9.55 Все вхождения двух символов ===")
    sentence = input("Введите предложение: ")
    char1 = input("Введите первый символ: ")
    char2 = input("Введите второй символ: ")
    print(f"Символы '{char1}' и '{char2}':")
    for char in sentence:
        if char in [char1, char2]:
            print(char)

def task_9_56():
    print("\n=== 9.56 Все буквосочетания 'нн' ===")
    sentence = input("Введите предложение: ")
    print("Буквосочетания 'нн':")
    for i in range(len(sentence)-1):
        if sentence[i:i+2].lower() == 'нн':
            print(f"нн (позиции {i+1}-{i+2})")

def task_9_57():
    print("\n=== 9.57 Буквы 'и' на четных позициях ===")
    sentence = input("Введите предложение: ")
    print("Буквы 'и' на четных позициях:")
    for i in range(len(sentence)):
        if (i+1) % 2 == 0 and sentence[i].lower() == 'и':  
            print(sentence[i])

def task_9_58():
    print("\n=== 9.58 Символы по особому шаблону ===")
    sentence = input("Введите предложение: ")
    print("Символы по шаблону (1,2,5,6,9,10...):")
    pattern = [0, 1, 4, 5, 8, 9]  
    i = 0
    while i < len(sentence):
        if i % 4 == 0 or i % 4 == 1:
            print(sentence[i])
        i += 1

def task_9_59():
    print("\n=== 9.59 Количество букв 'о' ===")
    sentence = input("Введите предложение: ")
    count = 0
    for char in sentence:
        if char.lower() == 'о':
            count += 1
    print(f"Количество букв 'о': {count}")

def task_9_60():
    print("\n=== 9.60 Количество пробелов ===")
    sentence = input("Введите предложение: ")
    count = 0
    for char in sentence:
        if char == ' ':
            count += 1
    print(f"Количество пробелов: {count}")

def task_9_61():
    print("\n=== 9.61 Число вхождений символа ===")
    sentence = input("Введите предложение: ")
    symbol = input("Введите символ для поиска: ")
    count = 0
    for char in sentence:
        if char == symbol:
            count += 1
    print(f"Символ '{symbol}' встречается {count} раз(а)")

def task_9_62():
    print("\n=== 9.62 Доля букв 'а' в % ===")
    sentence = input("Введите предложение: ")
    count_a = 0
    letters = 0
    
    for char in sentence:
        if char.isalpha():  
            letters += 1
            if char.lower() == 'а':
                count_a += 1
    
    if letters > 0:
        percentage = (count_a / letters) * 100
        print(f"Доля букв 'а': {percentage:.1f}%")
    else:
        print("В предложении нет букв")

def task_9_63():
    print("\n=== 9.63 Количество '+' и '*' ===")
    text = input("Введите текст: ")
    count_plus = 0
    count_star = 0
    
    for char in text:
        if char == '+':
            count_plus += 1
        elif char == '*':
            count_star += 1
    
    print(f"Символ '+' встречается {count_plus} раз(а)")
    print(f"Символ '*' встречается {count_star} раз(а)")

def task_9_64():
    print("\n=== 9.64 Одинаковые соседние буквы ===")
    sentence = input("Введите предложение: ")
    count = 0
    
