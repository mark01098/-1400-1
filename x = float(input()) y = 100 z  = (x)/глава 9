text2 = "Этот текст без нужной буквы"

def find_first_a(text):
    for i in range(len(text)):
        if text[i] == 'а':
            return True, i + 1
    return False, -1

has_a1, pos1 = find_first_a(text1)
has_a2, pos2 = find_first_a(text2)

