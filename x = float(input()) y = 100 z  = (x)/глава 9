# 9.85. 
print("\n9.85:")
texts = ["чудесный щука", "привет мир", "щука плавает"]

def find_chu_shu(text):
    for i in range(len(text) - 1):
        if (text[i] == 'ч' and text[i + 1] == 'у') or \
           (text[i] == 'щ' and text[i + 1] == 'у'):
            return True, i + 1  # позиция первой буквы
    return False, -1

for text in texts:
    found, pos = find_chu_shu(text)
    print(f"Текст: '{text}'")
    if found:
        print(f"Есть 'чу' или 'щу', первая буква на позиции: {pos}")
    else:
        print("Нет 'чу' или 'щу'")

# 9.86. Проверить буквосочетания "жи" и "ши"
print("\n9.86:")
phrases = ["жить шить", "жыть шыть", "жираф шина"]

def check_zhi_shi(text):
    errors = []
    for i in range(len(text) - 1):
        if (text[i] == 'ж' and text[i + 1] == 'ы') or \
           (text[i] == 'ш' and text[i + 1] == 'ы'):
            errors.append(i)
    return len(errors) == 0, errors
for phrase in phrases:
    correct, errors = check_zhi_shi(phrase)
    print(f"Фраза: '{phrase}'")
    if correct:
        print("Буквосочетания 'жи' и 'ши' написаны правильно")
    else:
        print(f"Ошибки на позициях: {[pos+1 for pos in errors]}")

# 9.87. 
print("\n9.87:")
phrases = ["чаща чящя", "чашка щавель", "чяй щявель"]
def fix_cha_shcha(text):
    result = ""
    i = 0
    while i < len(text):
        if i < len(text) - 1:
            if text[i] == 'ч' and text[i + 1] == 'я':
                result += 'ча'
                i += 2
            elif text[i] == 'щ' and text[i + 1] == 'я':
                result += 'ща'
                i += 2
            else:
                result += text[i]
                i += 1
        else:
            result += text[i]
            i += 1
    return result

for phrase in phrases:
    fixed = fix_cha_shcha(phrase)
    print(f"Было: '{phrase}'")
    print(f"Стало: '{fixed}'")

# 9.88. Символы между первой и второй запятой
print("\n9.88:")
texts = ["Привет, как дела, друзья?", "Один, два три", "Нет запятых"]

def between_commas(text):
    first_comma = -1
    second_comma = -1
    for i in range(len(text)):
        if text[i] == ',':
            first_comma = i
            break
    if first_comma == -1:  
        return ""
    # Находим вторую запятую
    for i in range(first_comma + 1, len(text)):
        if text[i] == ',':
            second_comma = i
            break
    if second_comma == -1: 
        return text[first_comma + 1:]
    else:  # две запятые
        return text[first_comma + 1:second_comma]

for text in texts:
    result = between_commas(text)
    print(f"Текст: '{text}'")
    print(f"Между запятыми: '{result}'")

# 9.89. 
print("\n9.89:")
texts = ["стол", "тест", "салат", "кот"]

def which_first(text):
    pos_c = -1
    pos_t = -1
    
    for i in range(len(text)):
        if text[i] == 'с' and pos_c == -1:
            pos_c = i
        if text[i] == 'т' and pos_t == -1:
            pos_t = i
    
    if pos_c == -1 and pos_t == -1:
        return "Нет ни 'с', ни 'т'"
    elif pos_c == -1:
        return "Нет 'с', есть 'т'"
    elif pos_t == -1:
        return "Нет 'т', есть 'с'"
    elif pos_c < pos_t:
        return "'с' встречается раньше 'т'"
    else:
        return "'т' встречается раньше 'с'"

for text in texts:
    print(f"Текст: '{text}' - {which_first(text)}")

