print("9.75:")
text1 = "Привет, как дела, друзья?"
text2 = "Привет как дела друзья"

def before_first_comma1(text):
    for i in range(len(text)):
        if text[i] == ',':
            return text[:i]
    return text  # если запятых нет

def before_first_comma2(text):
    for i in range(len(text)):
        if text[i] == ',':
            return text[:i]
    return text

print(f"Текст: '{text1}'")
print(f"До первой запятой: '{before_first_comma1(text1)}'")
print(f"Текст: '{text2}'") 
print(f"До первой запятой: '{before_first_comma2(text2)}'")

