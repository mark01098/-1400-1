def task_9_37():
    print("\n=== 9.37 Поменять половины слова ===")
    word = input("Введите слово (чётной длины): ")
    if len(word) % 2 == 0:
        half = len(word) // 2
        # Способ 1: без цикла
        result1 = word[half:] + word[:half]
        print(f"Без цикла: {result1}")
        # Способ 2: с циклом
        first_half = word[:half]
        second_half = word[half:]
        result2 = ""
        for char in second_half:
            result2 += char
        for char in first_half:
            result2 += char
        print(f"С циклом: {result2}")
    else:
        print("Слово должно быть чётной длины.")

def task_9_38():
    print("\n=== 9.38 Перестановка третей слова ===")
    word = input("Введите слово из 12 букв: ")
    if len(word) == 12:
        third = len(word) // 3
        part1 = word[:third]
        part2 = word[third:2*third]
        part3 = word[2*third:]
        
        result_a = part2 + part3 + part1
        result_b = part3 + part1 + part2
        
        print(f"Схема а: {result_a}")
        print(f"Схема б: {result_b}")
    else:
        print("Слово должно содержать ровно 12 букв.")

def task_9_39():
    print("\n=== 9.39 Перестановка первых и последних трёх букв ===")
    word = input("Введите слово (длиной >= 6): ")
    if len(word) >= 6:
        # Способ 1: без цикла
        result1 = word[-3:] + word[3:-3] + word[:3]
        # Способ 2: с циклом
        first_three = word[:3]
        middle = word[3:-3]
        last_three = word[-3:]
        result2 = ""
        for char in last_three:
            result2 += char
        for char in middle:
            result2 += char
        for char in first_three:
            result2 += char
        print(f"Без цикла: {result1}")
        print(f"С циклом: {result2}")
    else:
        print("Слово слишком короткое.")

def task_9_40():
    print("\n=== 9.40 Перенос первых k букв в конец ===")
    word = input("Введите слово: ")
    k = int(input("Введите количество букв k: "))
    if 0 < k < len(word):
        # Способ 1: без цикла
        result1 = word[k:] + word[:k]
        # Способ 2: с циклом
        first_k = word[:k]
        rest = word[k:]
        result2 = ""
        for char in rest:
            result2 += char
        for char in first_k:
            result2 += char
        print(f"Без цикла: {result1}")
        print(f"С циклом: {result2}")
    else:
        print("Некорректное значение k.")


def task_9_41():
    print("\n=== 9.41 Вывод слова столбиком ===")
    club = input("Введите название футбольного клуба: ")
    for char in club:
        print(char)

def task_9_42():
    print("\n=== 9.42 Слово с последней буквы ===")
    word = input("Введите слово: ")
    for i in range(len(word)-1, -1, -1):
        print(word[i])

def task_9_43():
    print("\n=== 9.43 Слово из нечетных букв ===")
    s1 = input("Введите слово: ")
    s2 = ""
    for i in range(len(s1)):
        if i % 2 == 0:  
            s2 += s1[i]
    print(f"Слово из нечетных букв: {s2}")

def task_9_44():
    print("\n=== 9.44 Слово в обратном порядке ===")
    s = input("Введите слово: ")
    t = ""
    for i in range(len(s)-1, -1, -1):
        t += s[i]
    print(f"Слово наоборот: {t}")

def task_9_45():
    print("\n=== 9.45 Пять звездочек ===")
    stars = ""
    for _ in range(5):
        stars += "*"
    print(stars)

def task_9_46():
    print("\n=== 9.46 Восемь подчеркиваний ===")
    underscores = ""
    for _ in range(8):
        underscores += "_"
    print(underscores)

def task_9_47():
    print("\n=== 9.47 Строка из одинаковых символов ===")
    symbol = input("Введите символ: ")
    count = int(input("Введите количество: "))
    result = ""
    for _ in range(count):
        result += symbol
    print(f"Результат: {result}")

def task_9_48():
    print("\n=== 9.48 Добавление символов в начало и конец ===")
    word = input("Введите слово: ")
    new_word = "++++" + word + "-----"
    print(f"Результат: {new_word}")

def task_9_49():
    print("\n=== 9.49 Добавление звездочек по количеству букв ===")
    word = input("Введите слово: ")
    stars = ""
    for _ in range(len(word)):
        stars += "*"
    new_word = stars + word + stars
    print(f"Результат: {new_word}")

def task_9_50():
    print("\n=== 9.50 Замена символов во втором слове ===")
    word1 = input("Введите первое слово: ")
    word2 = input("Введите второе слово (короче первого): ")
    
    if len(word1) > len(word2):
        result = word1[:len(word2)] + word2[len(word1):]
    else:
        result = word2
    
    print(f"Результат: {result}")

def task_9_51():
    print("\n=== 9.51 Все буквы 'и' в предложении ===")
    sentence = input("Введите предложение: ")
    print("Буквы 'и':")
    for char in sentence:
        if char.lower() == 'и':
            print(char)

def task_9_52():
    print("\n=== 9.52 Все вхождения символа столбиком ===")
    sentence = input("Введите предложение: ")
    symbol = input("Введите символ для поиска: ")
    print(f"Символы '{symbol}':")
    for char in sentence:
        if char == symbol:
            print(char)

def task_9_53():
