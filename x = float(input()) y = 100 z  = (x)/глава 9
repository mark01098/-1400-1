# 9.80.
print("\n9.80:")
sequences = ["aaaaabbbcc", "xxxxxx", "abc", "zzzzzzzzz"]

def count_same_start1(seq):
    if len(seq) == 0:
        return 0
    first_char = seq[0]
    count = 1
    for i in range(1, len(seq)):
        if seq[i] == first_char:
            count += 1
        else:
            break
    return count
def count_same_start2(seq):
    if len(seq) == 0:
        return 0
    first_char = seq[0]
    count = 1
    for i in range(1, len(seq)):
        if seq[i] == first_char:
            count += 1
        else:
            break
    return count

for seq in sequences:
    print(f"Последовательность: '{seq}'")
    print(f"Одинаковых символов в начале (случай 1): {count_same_start1(seq)}")
    print(f"Одинаковых символов в начале (случай 2): {count_same_start2(seq)}")

# 9.81. 
print("\n9.81:")
word_pairs = [("привет", "природа"), ("кот", "ковер"), ("мама", "мама")]


def common_start1(word1, word2):
    min_len = min(len(word1), len(word2))
    count = 0
    for i in range(min_len):
        if word1[i] == word2[i]:
            count += 1
        else:
            break
    return count


def common_start2(word1, word2):
    min_len = min(len(word1), len(word2))
    count = 0
    for i in range(min_len):
        if word1[i] == word2[i]:
            count += 1
        else:
            break
    return count

for w1, w2 in word_pairs:
    print(f"Слова: '{w1}' и '{w2}'")
    print(f"Совпадающих начальных букв (случай 1): {common_start1(w1, w2)}")
    print(f"Совпадающих начальных букв (случай 2): {common_start2(w1, w2)}")

# 9.82. 
print("\n9.82:")
sentences = ["   Отлично получилось", "Хорошо сделано", "Очень хорошо"]

def count_o_in_first_word(sentence):
    
    start = 0
    while start < len(sentence) and sentence[start] == ' ':
        start += 1
    
    end = start
    while end < len(sentence) and sentence[end] != ' ':
        end += 1
    
    first_word = sentence[start:end]   
    count = 0
    for char in first_word:
        if char == 'о':
            count += 1
    return count
for sentence in sentences:
    print(f"Предложение: '{sentence}'")
    print(f"Букв 'о' в первом слове: {count_o_in_first_word(sentence)}")

