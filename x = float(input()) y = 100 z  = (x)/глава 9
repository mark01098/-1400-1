
def task_9_1():
    print("\n=== 9.1 Ввод и вывод имени ===")
    name = input("Введите ваше имя: ")
    print(f"Ваше имя: {name}")
    print(f"Привет, {name}!")

def task_9_2():
    print("\n=== 9.2 Футбольная команда ===")
    team = input("Введите название футбольной команды: ")
    print(f"{team} — это чемпион!")

def task_9_3():
