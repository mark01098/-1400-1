def count_n_before_comma1(text):
    count = 0
    for char in text:
        if char == ',':
            break
        if char == 'н':
            count += 1
    return count
def count_n_before_comma2(text):
    count = 0
    for char in text:
        if char == ',':
            break
        if char == 'н':
            count += 1
    return count

for text in texts:
    print(f"Текст: '{text}'")
    print(f"Букв 'н' до запятой (случай 1): {count_n_before_comma1(text)}")
