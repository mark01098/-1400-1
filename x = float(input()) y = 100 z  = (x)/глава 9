# 9.105. Переставить буквы между 2-й и 10-й в обратном порядке
print("\n9.105:")
word = "программирование"
if len(word) >= 12:
    # Берем буквы с 3-й по 9-ю (индексы 2-8)
    middle = word[2:9]  # с 3-й по 9-ю
    reversed_middle = middle[::-1]  # переворачиваем
    new_word = word[:2] + reversed_middle + word[9:]
    print(f"Было: '{word}'")
    print(f"Стало: '{new_word}'")

# 9.106. 
print("\n9.106:")
word = "программирование"
k, s = 3, 10  # например, между 3-й и 10-й буквами
if k < s and len(word) >= s:
    # Буквы с (k+1)-й по (s-1)-ю
    middle = word[k:s-1]  # индексы k до s-2
    reversed_middle = middle[::-1]
    new_word = word[:k] + reversed_middle + word[s-1:]
    print(f"Было: '{word}'")
    print(f"Между {k}-й и {s}-й буквами перевернули: '{new_word}'")

# 9.107. 
print("\n9.107:")
words = ["абонемент", "оборот", "комната", "кот"]

def swap_first_a_last_o(word):
    first_a = -1
    last_o = -1
    for i in range(len(word)):
        if word[i] == 'а':
            first_a = i
            break
    for i in range(len(word)-1, -1, -1):
        if word[i] == 'о':
            last_o = i
            break
    if first_a == -1 or last_o == -1:
        return word, False
    chars = list(word)
    chars[first_a], chars[last_o] = chars[last_o], chars[first_a]
    return ''.join(chars), True
for word in words:
    new_word, swapped = swap_first_a_last_o(word)
    print(f"Слово: '{word}'")
    if swapped:
        print(f"После обмена: '{new_word}'")
    else:
        print("Нельзя обменять (нет 'а' или 'о')")
print("\n=== 9.108-9.117. УДАЛЕНИЕ СИМВОЛОВ ===")


def remove_char(text, pos):
    if pos < 1 or pos > len(text):
        return text
    chars = list(text)
    for i in range(pos-1, len(chars)-1):
        chars[i] = chars[i+1]
    chars[-1] = '_'
    return ''.join(chars)

