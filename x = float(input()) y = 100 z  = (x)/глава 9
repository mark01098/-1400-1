def find_first_double(text):
    for i in range(len(text) - 1):
        if text[i] == text[i + 1]:
            return i + 1, i + 2  
    return -1, -1

for text in strings:
    pos1, pos2 = find_first_double(text)
    print(f"Текст: '{text}'")
    if pos1 != -1:
        print(f"Первая пара одинаковых соседей: позиции {pos1} и {pos2}")
    else:
