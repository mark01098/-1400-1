def task_9_120():
    print("\n=== 9.120 Вставка буквы 'т' после k-й буквы ===")
    word = input("Введите слово, оканчивающееся символом '_': ")
    
    if not word.endswith('_'):
        print("Ошибка: слово должно оканчиваться символом '_'")
        return 
    try:
        k = int(input(f"Введите номер буквы k (от 1 до {len(word)-1}): "))
        if 1 <= k <= len(word) - 1:
            new_word = word[:k] + "т" + word[k:]
            print(f"Исходное слово: {word}")
            print(f"Слово с буквой 'т' после {k}-й буквы: {new_word}")
        else:
            print(f"Некорректное значение k. Должно быть от 1 до {len(word)-1}")
    except ValueError:
        print("Ошибка: нужно ввести целое число")

# 9.183. 
print("9.183:")

def get_unique_words(sentence):
    """Получить слова, которые встречаются в предложении ровно один раз"""
    words = sentence.split()
    word_count = {}
    for word in words:
        cleaned_word = word.strip('.,!?;:')
        word_count[cleaned_word] = word_count.get(cleaned_word, 0) + 1
    return [word for word, count in word_count.items() if count == 1]
sentence1 = "кот собака кот мышка"
sentence2 = "собака заяц кот"

unique1 = get_unique_words(sentence1)
unique2 = get_unique_words(sentence2)

print(f"Предложение 1: '{sentence1}'")
print(f"Уникальные слова в 1: {unique1}")
print(f"Предложение 2: '{sentence2}'")
print(f"Уникальные слова в 2: {unique2}")
result = []
for word in unique1:
    if word not in unique2:
        result.append(word)

for word in unique2:
    if word not in unique1:
        result.append(word)

print(f"Слова, встречающиеся только один раз в одном из предложений: {result}")



# 9.184. 
print("\n9.184:")

def check_parentheses_simple(text):
    stack = []
    
    for i, char in enumerate(text):
        if char == '(':
            stack.append(i)  
        elif char == ')':
            if stack:
                stack.pop() 
            else:
                return False, f"Лишняя закрывающая скобка на позиции {i+1}"
    if stack:
        return False, f"Лишние открывающие скобки: {len(stack)} шт."
    
    return True, "Скобки расставлены правильно"


test_cases = [
    "Пример (правильный) текст",
    "Пример (неправильный текст",
    "Пример) неправильный текст",
    "Пример ((правильный) текст)",
    "Пример (неправильный)) текст"
]

for text in test_cases:
    print(f"\nТекст: '{text}'")
    correct, message = check_parentheses_simple(text)
    if correct:
        print("а) да")
    else:
        print("а) нет")
    print(f"б) {message}")

# 9.185. 
print("\n9.185:")

def check_parentheses_nested(text):
    
    stack = []
    
    for i, char in enumerate(text):
        if char == '(':
            stack.append(i)  
        elif char == ')':
            if stack:
                stack.pop()  
            else:
                return False, f"Лишняя закрывающая скобка на позиции {i+1}"
    
    if stack:
        return False, f"Лишние открывающие скобки: {len(stack)} шт."
    
    return True, "Скобки расставлены правильно"


test_cases = [
    "((a + b) * (c - d))",
    "((a + b) * (c - d)",
    "(a + b)) * (c - d)",
    "((a + b) * c - d))",
    "a + b * c - d"  # без скобок
]

for text in test_cases:
    print(f"\nВыражение: '{text}'")
    correct, message = check_parentheses_nested(text)
    if correct:
        print("а) да")
    else:
        print("а) нет")
    print(f"б) {message}")

# 9.186. 
print("\n9.186:")

def justify_text(text, target_length):
    """Выровнять текст по ширине"""
    if len(text) >= target_length:
        return text
  
    words = text.split()
    if len(words) <= 1:
        return text  # если только одно слово
    spaces_needed = target_length - len(text.replace(' ', ''))
    gaps = len(words) - 1  # количество промежутков между словами
    
    # Базовое количество пробелов в каждом промежутке
    base_spaces = spaces_needed // gaps
    extra_spaces = spaces_needed % gaps
    
    # Собираем новый текст
    result = ""
    for i, word in enumerate(words):
        result += word
        if i < len(words) - 1:  # не после последнего слова
            spaces = base_spaces + 1 + (1 if i < extra_spaces else 0)
            result += ' ' * spaces
    
    return result
text = "кот собака мышка"
print(f"Исходный текст: '{text}' (длина: {len(text)})")
print("Выровненный текст:")
for length in range(20, 30, 3):
    justified = justify_text(text, length)
    print(f"Длина {length}: '{justified}' (фактическая длина: {len(justified)})")

# 9.187. 
print("\n9.187:")

def number_to_russian_words(n):
    """Преобразовать число в русские слова (до 1000)"""
    units = {
        0: '', 1: 'один', 2: 'два', 3: 'три', 4: 'четыре',
        5: 'пять', 6: 'шесть', 7: 'семь', 8: 'восемь', 9: 'девять'
    }
    teens = {
        10: 'десять', 11: 'одиннадцать', 12: 'двенадцать', 13: 'тринадцать',
        14: 'четырнадцать', 15: 'пятнадцать', 16: 'шестнадцать',
        17: 'семнадцать', 18: 'восемнадцать', 19: 'девятнадцать'
    }
    tens = {
        2: 'двадцать', 3: 'тридцать', 4: 'сорок', 5: 'пятьдесят',
        6: 'шестьдесят', 7: 'семьдесят', 8: 'восемьдесят', 9: 'девяносто'
    }
    hundreds = {
        1: 'сто', 2: 'двести', 3: 'триста', 4: 'четыреста',
        5: 'пятьсот', 6: 'шестьсот', 7: 'семьсот', 8: 'восемьсот', 9: 'девятьсот'
    }
    if n == 0:
        return 'ноль'
    
    if n == 1000:
        return 'тысяча'
    
    result_parts = []
  
    hundreds_digit = n // 100
    if hundreds_digit > 0:
        result_parts.append(hundreds[hundreds_digit])
    
    remainder = n % 100
    if remainder == 0:
        pass  # ничего не добавляем
    elif 10 <= remainder < 20:
        result_parts.append(teens[remainder])
    else:
        tens_digit = remainder // 10
        units_digit = remainder % 10
        
        if tens_digit > 0:
            result_parts.append(tens[tens_digit])
        
        if units_digit > 0:
            result_parts.append(units[units_digit])
    
    return ' '.join(result_parts).strip()
test_numbers = [0, 1, 5, 10, 13, 25, 100, 105, 241, 999, 1000]
for num in test_numbers:
    print(f"{num}: {number_to_russian_words(num)}")

