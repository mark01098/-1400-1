def task_9_65():
    print("\n=== 9.65 Число вхождений буквосочетания ===")
    sentence = input("Введите предложение: ")

    combination = "ро"
    count = 0
    for i in range(len(sentence)-1):
        if sentence[i:i+2].lower() == combination:
            count += 1
    print(f"а) Буквосочетание '{combination}' встречается {count} раз(а)")
    
    combination2 = input("б) Введите буквосочетание из двух букв: ")
    count2 = 0
    for i in range(len(sentence)-1):
        if sentence[i:i+2].lower() == combination2.lower():
            count2 += 1
    print(f"   Буквосочетание '{combination2}' встречается {count2} раз(а)")
    
    combination3 = input("в) Введите любое буквосочетание: ")
    count3 = 0
    for i in range(len(sentence)-len(combination3)+1):
        if sentence[i:i+len(combination3)].lower() == combination3.lower():
            count3 += 1
    print(f"   Буквосочетание '{combination3}' встречается {count3} раз(а)")

def task_9_66():
    print("\n=== 9.66 Количество слов (один пробел) ===")
    sentence = input("Введите предложение (слова через один пробел): ").strip()
    count = 1 if sentence else 0  # Если строка не пустая - минимум 1 слово
    
    for char in sentence:
        if char == ' ':
            count += 1
    
    print(f"Количество слов: {count}")

def task_9_67():
    print("\n=== 9.67 Количество слов (несколько пробелов) ===")
    sentence = input("Введите предложение: ")
    
    sentence_trimmed = sentence.strip()
    
    words1 = 0
    in_word = False
    
    for char in sentence_trimmed:
        if char != ' ':
            if not in_word:
                words1 += 1
                in_word = True
        else:
            in_word = False
    
    print(f"1) Без начальных/конечных пробелов: {words1} слов")
    
    words2 = 0
    in_word = False
    
    for char in sentence:
        if char != ' ':
            if not in_word:
                words2 += 1
                in_word = True
        else:
            in_word = False
    
    print(f"2) С начальными/конечными пробелами: {words2} слов")

