print(f"y) (not X) and (not Y) = {result_y}")
result_z = (not(X and Z)) or Y
print(f"z) (not (X and Z)) and Y = {result_z}")
result_e = X and (not Y or Z)
print(f"e) X and (not Y or Z) = {result_e}")
result_d = X and ((not Y or Z))
print(f"d) X and ((not Y or Z)) = {result_d}")
result_f = X or ((not (Y or Z)))
print(f"f) = X or ((not (Y or Z))) = {result_f}")
