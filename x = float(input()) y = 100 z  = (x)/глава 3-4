d = 15  


dm = [31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31]


pd = d - 1
pm = m
py = 1  

if pd == 0:
    pm -= 1
    if pm == 0:
        pm = 12
        py -= 1
    pd = dm[pm - 1]

print(f"4.113 а) {pd}.{pm}.{py}")

nd = d + 1
nm = m
ny = 1

if nd > dm[nm - 1]:
    nd = 1
    nm += 1
    if nm > 12:
        nm = 1
        ny += 1

print(f"4.113 б) {nd}.{nm}.{ny}")

