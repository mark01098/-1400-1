# Задание 4.49
from math import sqrt
a, b, c = 1, -3, 2
D = b*b - 4*a*c

if D > 0:
    x1 = (-b + sqrt(D))/(2*a)
    x2 = (-b - sqrt(D))/(2*a)
    print(f"  x1 = {x1:.2f}, x2 = {x2:.2f}")
elif D == 0:
    x = -b/(2*a)
    print(f"  x = {x:.2f}")
else:
    print("  Нет действительных корней")

