# 4.120 
def rook_move(x1, y1, x2, y2):
    return x1 == x2 or y1 == y2 
def bishop_move(x1, y1, x2, y2):
    return abs(x1 - x2) == abs(y1 - y2)
def queen_move(x1,y1,x2,y2):
    return rook_move(x1, y1 ,x2, y2) or bishop_move(x1 ,y1, x2 ,y2)
def knight_move(x1, y1, x2, y2):
    x = abs(x1 -x2)
    y = abs(y1 - y2)
    return (x == 1 and y == 2 ) or (x == 2 and y == 1)
def king_move(x1, y1, x2 ,y2):
    x = abs(x1 - x2)
    y = abs(y1 - y2)
    return max(x, y) == 1
def clear_path_move(x1, y1, x2, y2 ):
    if x1 == x2 :
        min(y), max(y)  = min(y1, y2), max(y1, y2)
        for y in range(min(y) + 1, max(y)):
            if x == black_x and y == black_y:
                return False 
    elif y1 == y2:
        min(x), max(x) = min(x1 , x2), max(x1, x2)
        for x in range(min(x) + 1, max):
            if x == black_x and y == black_y:
                return False
    return True

def white_piece_move(white_x, white_y, black_x, black_y, target_x, target_y,white_type, black_type):
    if white_type == "rook":
        move = rook_move(white_x, white_y, target_x, target_y) and path_rook(white_x, white_y, target_x, target_y, black_x, black_y)
    if not move:
        return False
    if black_x == target_x and black_y == target_y:
        return True 
    target_under_attack = rook_move(black_x, black_y, target_x, target_y)
    return target_under_attack
# 4.121
def same_color(x1, x2, y1, y2):
    sum1 = x1 + y1
    sum2 = y1 + y2 
    return sum1 % 2 == sum2 % 2
# 4.122
def triangle_exists(side1, side2, side3):
    return (side1 > 0 and side2 > 0 and side3 > 0 and
            side1 + side2 > side3 and
            side1 + side3 > side2 and
            side2 + side3 > side1)
# 4.123
def right_triangle(side1, side2, side3):
    if not triangle_exists(side1, side2, side3):
        return False
    sides = sorted([side1, side2, side3])
    leg1 = sides[0] ** 2
    leg2 = sides[1] ** 2
    hypotenuse = sides[2] ** 2
    
    return abs(leg1 + leg2 - hypotenuse) < 0.000001
# 4.124
def triangle_type(side1, side2, side3):
    if not triangle_exists(side1, side2, side3):
        return "Triangle does not exist"
    
    sides = sorted([side1, side2, side3])
    a2, b2, c2 = sides[0]**2, sides[1]**2, sides[2]**2
    
    # Determine by angles
    if abs(a2 + b2 - c2) < 0.000001:
        angles = "right"
    elif a2 + b2 > c2:
        angles = "acute"
    else:
        angles = "obtuse"
    
    # Determine by sides
    if side1 == side2 == side3:
        sides = "equilateral"
    elif side1 == side2 or side1 == side3 or side2 == side3:
        sides = "isosceles"
    else:
        sides = "scalene"
    
    return f"{angles}, {sides}"

# 4.125
def age_phrase(age):
    if 1 <= age <= 99:
        last_digits = age % 100
        last_digit = age % 10
        
        if 11 <= last_digits <= 19:
            word = "years"
        elif last_digit == 1:
            word = "year"
        elif 2 <= last_digit <= 4:
            word = "years"
        else:
            word = "years"
            
        return f"I am {age} {word} old"
    else:
        return "invalid age"

# 4.126
def mushroom_phrase(mushroom_count):
    if mushroom_count < 0:
        return "invalid count"
    
    last_digits = mushroom_count % 100
    last_digit = mushroom_count % 10
    
    if 11 <= last_digits <= 19:
        word = "mushrooms"
    elif last_digit == 1:
        word = "mushroom"
    elif 2 <= last_digit <= 4:
        word = "mushrooms"
    else:
        word = "mushrooms"
    
    return f"we found {mushroom_count} {word} in the forest"

# 4.128
def price_in_rubles(price_in_kopeks):
    if 1 <= price_in_kopeks <= 9999:
        rubles = price_in_kopeks // 100
        kopeks = price_in_kopeks % 100
        
        if rubles == 1 or (rubles % 10 == 1 and rubles % 100 != 11):
            ruble_word = "ruble"
        elif 2 <= rubles % 10 <= 4 and not (11 <= rubles % 100 <= 19):
            ruble_word = "rubles"
        else:
            ruble_word = "rubles"
        
        if kopeks == 0:
            return f"{rubles} {ruble_word} exactly"
        else:
       
            if kopeks == 1 or (kopeks % 10 == 1 and kopeks % 100 != 11):
                kopeks_word = "kopek"
            elif 2 <= kopeks % 10 <= 4 and not (11 <= kopeks % 100 <= 19):
                kopeks_word = "kopeks"
            else:
                kopeks_word = "kopeks"
            
            return f"{rubles} {ruble_word} {kopeks} {kopeks_word}"
    else:
        return "invalid amount"

# 4.129
def full_years(birth_year, birth_month, birth_day,
                        current_year, current_month, current_day):
    
    full_years = current_year - birth_year
    
    if current_month < birth_month:
        full_years -= 1
    elif current_month == birth_month and current_day < birth_day:
        full_years -= 1
    
    return full_years

# 4.130
def who_is_older(year1, month1, day1, year2, month2, day2):
    if year1 < year2:
        return "First person is older"
    elif year1 > year2:
        return "Second person is older"
    else:
        if month1 < month2:
            return "First person is older"
        elif month1 > month2:
            return "Second person is older"
        else:
            if day1 < day2:
                return "First person is older"
            elif day1 > day2:
                return "Second person is older"
            else:
                return "Same age"
def calculate_age_in_years_months(birth_year, birth_month,
                                 current_year, current_month):
    
    years = current_year - birth_year
    months = current_month - birth_month
    
    if months < 0:
        years -= 1
        months += 12
    
    return years, months

# 4.131
def calculate_age_in_years_months(birth_year, birth_month,
                                 current_year, current_month):
    
    years = current_year - birth_year
    months = current_month - birth_month
    
    if months < 0:
        years -= 1
        months += 12
    
    return years, months

# 4.132
def train_at_platform(arrival_hour, arrival_minute,
                     departure_hour, departure_minute,
                     passenger_hour, passenger_minute):
    
    arrival_time = arrival_hour * 60 + arrival_minute
    departure_time = departure_hour * 60 + departure_minute
    passenger_time = passenger_hour * 60 + passenger_minute
    
    return arrival_time <= passenger_time < departure_time

# 4.133
def days_in_month(month, year=2023):
    if month == 2:
        return 28
    elif month in [4, 6, 9, 11]:
        return 30
    else:
        return 31

def previous_day(day, month):
    if day > 1:
        return day - 1, month
    else:
        if month == 1:
            return 31, 12
        else:
            previous_month = month - 1
            days_in_previous_month = days_in_month(previous_month)
            return days_in_previous_month, previous_month

def next_day(day, month):
    days_in_current_month = days_in_month(month)
    
    if day < days_in_current_month:
        return day + 1, month
    else:
        if month == 12:
            return 1, 1
        else:
            return 1, month + 1
 # 4.134      
def is_leap(y):
    return (y % 4 == 0 and y % 100 != 0) or (y % 400 == 0)
def days_in(m, y):
    if m == 2:
        return 29 if is_leap(y) else 28
    elif m in [4, 6, 9, 11]:
        return 30
    else:
        return 31

def prev_day(y, m, d):
    if d > 1:
        return y, m, d - 1
    else:
        if m == 1:
            return y - 1, 12, 31
        else:
            return y, m - 1, days_in(m - 1, y)

def next_day(y, m, d):
    if d < days_in(m, y):
        return y, m, d + 1
    else:
        if m == 12:
            return y + 1, 1, 1
        else:
            return y, m + 1, 1
# 4.135
def light(t):
    p = t % 6
    if p < 3:
        return "green"
    elif p < 4:
        return "yellow"
    else:
        return "red"
# 4.136
def day_type(k, first=1):
    d = (k + first - 2) % 7 + 1
    if d == 6:
        return "Saturday"
    elif d == 7:
        return "Sunday"
    else:
        return "working day"
# 4.137
def digit_k(k):
    n = (k - 1) // 2
    pos = (k - 1) % 2
    num = 10 + n
    return num // 10 if pos == 0 else num % 10
# 4.138
def digit_n(n):
    if n == 1:
        return 0
    elif n <= 10:
        return n - 1
    else:
        p = n - 10
        num = 10 + (p - 1) // 2
        pos = (p - 1) % 2
        return num // 10 if pos == 0 else num % 10
# 4.139
def digit_k_large(k):
    if k <= 100:
        num = 50 + (k - 1) // 2
        pos = (k - 1) % 2
        return num // 10 if pos == 0 else num % 10
    else:
        p = k - 100
        num = 100 + (p - 1) // 3
        pos = (p - 1) % 3
        if pos == 0:
            return num // 100
        elif pos == 1:
            return (num // 10) % 10
        else:
            return num % 10
# 4.140
def digit_1_to_110(k):
    if k <= 9:
        return k
    elif k <= 189:
        p = k - 9
        num = 10 + (p - 1) // 2
        pos = (p - 1) % 2
        return num // 10 if pos == 0 else num % 10
    else:
        p = k - 189
        num = 100 + (p - 1) // 3
        pos = (p - 1) % 3
        if pos == 0:
            return num // 100
        elif pos == 1:
            return (num // 10) % 10
        else:
            return num % 10
# 4.141 
def is_sum_even(n, a):
    if a % 2 == 0:
        odd_count = n // 2
    else:
        odd_count = (n + 1) // 2
    return odd_count % 2 == 0

