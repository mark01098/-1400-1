in_area_a = (-2 <= x <= 1)
in_area_b = (0 <= x <= 2) and (0 <= y <= 1)  

print(f"Точка ({x}, {y}):")
print(f"Попадает в область а): {in_area_a}")
print(f"Попадает в область b): {in_area_b}")

print("\nЗадание 3.34")
a, b = 4, 4  
c, d = 4, 6  

print(f"Фигура на ({a},{b}), цель ({c},{d})")
print(f"а) Ладья угрожает: {a == c or b == d}")
print(f"б) Слон угрожает: {abs(a - c) == abs(b - d)}")
print(f"в) Король может пойти: {abs(a - c) <= 1 and abs(b - d) <= 1}")
print(f"г) Ферзь угрожает: {(a == c or b == d) or (abs(a - c) == abs(b - d))}")

print(f"д) Белая пешка:")
print(f"   Обычный ход: {a == c and (d - b == 1 or (b == 2 and d - b == 2))}")
print(f"   Бьёт: {abs(a - c) == 1 and d - b == 1}")

print(f"е) Черная пешка:")
print(f"   Обычный ход: {a == c and (b - d == 1 or (b == 7 and b - d == 2))}")
print(f"   Бьёт: {abs(a - c) == 1 and b - d == 1}")

print(f"ж) Конь угрожает: {(abs(a - c) == 2 and abs(b - d) == 1) or (abs(a - c) == 1 and abs(b - d) == 2)}")

print("\nЗадание 3.35")
a, b = 4, 4  
c, d = 4, 6  
e, f = 4, 5  

def ладья_угрожает(x1, y1, x2, y2):
    return x1 == x2 or y1 == y2

def слон_угрожает(x1, y1, x2, y2):
    return abs(x1 - x2) == abs(y1 - y2)

def ферзь_угрожает(x1, y1, x2, y2):
    return ладья_угрожает(x1, y1, x2, y2) or слон_угрожает(x1, y1, x2, y2)

def конь_угрожает(x1, y1, x2, y2):
    return (abs(x1 - x2) == 2 and abs(y1 - y2) == 1) or (abs(x1 - x2) == 1 and abs(y1 - y2) == 2)

def король_угрожает(x1, y1, x2, y2):
    return abs(x1 - x2) <= 1 and abs(y1 - y2) <= 1

print(f"Белая на ({a},{b}), черная на ({c},{d}), цель ({e},{f})")
print(f"а) Ладья -> ладья: {ладья_угрожает(a, b, e, f) and not ладья_угрожает(c, d, e, f)}")
print(f"б) Ладья -> ферзь: {ладья_угрожает(a, b, e, f) and not ферзь_угрожает(c, d, e, f)}")
print(f"в) Ладья -> конь: {ладья_угрожает(a, b, e, f) and not конь_угрожает(c, d, e, f)}")
print(f"г) Ладья -> слон: {ладья_угрожает(a, b, e, f) and not слон_угрожает(c, d, e, f)}")
print(f"д) Ферзь -> ферзь: {ферзь_угрожает(a, b, e, f) and not ферзь_угрожает(c, d, e, f)}")
print(f"е) Ферзь -> ладья: {ферзь_угрожает(a, b, e, f) and not ладья_угрожает(c, d, e, f)}")
print(f"ж) Ферзь -> конь: {ферзь_угрожает(a, b, e, f) and not конь_угрожает(c, d, e, f)}")
print(f"з) Ферзь -> слон: {ферзь_угрожает(a, b, e, f) and not слон_угрожает(c, d, e, f)}")
print(f"и) Конь -> конь: {конь_угрожает(a, b, e, f) and not конь_угрожает(c, d, e, f)}")
print(f"к) Конь -> ладья: {конь_угрожает(a, b, e, f) and not ладья_угрожает(c, d, e, f)}")
print(f"л) Конь -> ферзь: {конь_угрожает(a, b, e, f) and not ферзь_угрожает(c, d, e, f)}")
print(f"м) Конь -> слон: {конь_угрожает(a, b, e, f) and not слон_угрожает(c, d, e, f)}")
print(f"н) Слон -> слон: {слон_угрожает(a, b, e, f) and not слон_угрожает(c, d, e, f)}")
print(f"о) Слон -> ферзь: {слон_угрожает(a, b, e, f) and not ферзь_угрожает(c, d, e, f)}")
print(f"п) Слон -> конь: {слон_угрожает(a, b, e, f) and not конь_угрожает(c, d, e, f)}")
print(f"р) Слон -> ладья: {слон_угрожает(a, b, e, f) and not ладья_угрожает(c, d, e, f)}")
print(f"с) Король -> слон: {король_угрожает(a, b, e, f) and not слон_угрожает(c, d, e, f)}")
print(f"т) Король -> ферзь: {король_угрожает(a, b, e, f) and not ферзь_угрожает(c, d, e, f)}")
print(f"у) Король -> конь: {король_угрожает(a, b, e, f) and not конь_угрожает(c, d, e, f)}")
print(f"ф) Король -> ладья: {король_угрожает(a, b, e, f) and not ладья_угрожает(c, d, e, f)}")

import math

print("\nЗадание 4.1")
x = 1.5
if x > 0:
    y = math.sin(x)**2
else:
    y = 1 - 2 * math.sin(x)**2
print(f"x={x}, y={y}")

print("\nЗадание 4.2")
x = -0.5
if x > 0:
    y = math.sin(x**2)
else:
    y = 1 + 2 * math.sin(x)**2
print(f"x={x}, y={y}")

print("\nЗадание 4.6")
num1 = 5.3
num2 = 7.1
print(f"Числа: {num1} и {num2}")
print(f"а) Большее: {max(num1, num2)}")
print(f"б) Меньшее: {min(num1, num2)}")

print("\nЗадание 4.7")
print(f"Максимальное: {max(num1, num2)}")
print(f"Минимальное: {min(num1, num2)}")

print("\nЗадание 4.8")
km = 2.5  
feet = 8000  
meters_from_feet = feet * 0.305
km_from_feet = meters_from_feet / 1000
print(f"Расстояния: {km} км и {feet} футов ({km_from_feet:.3f} км)")
if km < km_from_feet:
    print("Первое расстояние меньше")
else:
    print("Второе расстояние меньше")

