#5
A = True 
B = False 
C = False 

print("A=", A)
print("B=", B)
print("C=", C)

result_a = A or B and (not C)
print(f"a) A or B and (not C) = {result_a}")
result_b = (not A) and (not B)
print(f"b) (not A) and (not B) = {result_b}")
result_c = (not (A and B)) or B 
print(f"c) (not (A and B)) or B = {result_c}")
result_d = X and (not Y or Z)
print(f"d) X and (not Y or Z) = {result_d}")
result_e = A and ((not B or C))
print(f"e) A and ((not B or C)) = {result_d}")
result_f = A or ((not (B and C)))
print(f"f) A or ((not (B and C))) = {result_f}")
