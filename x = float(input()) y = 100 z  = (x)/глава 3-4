
#1
A = True 
B = False 
C = False

print ("A=", A)
print ("B=", B)
print ("C=", C)

result_a = A or B 
print(f"a) A or B = {result_a}")
result_b = A and B 
print (f"a) A and = {result_b}")
result_c = B or C 
print (f"a) B or C = {result_c}")
#2 
X = False 
Y = True 
Z = False 

print("X=", X)
print("Y=", Y)
print("Z=", Z)

result_x = X or Y 
print(f"x) X or Y = {result_x}")
result_y = X and Y
print(f"y) X and Y = {result_y}")
result_z = X and Z
print(f"z) X and Z = {result_z}")
#3
A = True 
B = False 
C = False

print("A=", A)
print("B=", B)
print("C=", C)

result_a = (not A) and B
print(f"a) (not A) and B = {result_a}")
result_b = A or (not B)
print(f"b) A or (not B) = {result_b}")
result_c = A and B or (not C)
print(f"c) A and B or (not C) = {result_c}")
