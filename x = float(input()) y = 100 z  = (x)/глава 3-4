a2, b2, c2 = 4.0, 2.0, 6.0

def mid(x, y, z):
    if (x > y and x > z) or (x > z and x < y):
        return x 
    if (y > x and y < z ) or ( y > z and y < x):
        return y 
    return z 

mid1 = mid(a1, b1, c1)
mid2 = mid(a2, b2, c2)
d = (mid1 + mid2) / (2)
print(f"4.101: {d}")

