print("\nЗадание 4.13")
a, b, c = 1, -3, 2
discriminant = b**2 - 4*a*c
print(f"Уравнение: {a}x² + {b}x + {c} = 0")
print(f"Дискриминант: {discriminant}")
if discriminant >= 0:
    print("Есть вещественные корни")
else:
    print("Нет вещественных корней")

print("\nЗадание 4.14")
if discriminant >= 0:
    x1 = (-b + math.sqrt(discriminant)) / (2*a)
    x2 = (-b - math.sqrt(discriminant)) / (2*a)
    print(f"Корни: x1={x1}, x2={x2}")
else:
    print("Вещественных корней нет")
    
