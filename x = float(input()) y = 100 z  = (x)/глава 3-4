print(f"a) x>2 и y>3: {x>2 and y>3}")
print(f"б) x>1 или y>-2: {x>1 or y>-2}")
print(f"в) x>=0 и y<5: {x>=0 and y<5}")
print(f"г) x==3 или x<-1: {x==3 or x<-1}")
print(f"д) x>3 и x<10: {x>3 and x<10}")
print(f"е) неверно, что x>2: {not (x>2)}")
print(f"ж) неверно, что x>0 и x<5: {not (x>0 and x<5)}")
print(f"з) 10<x≤20: {10<x and x<=20}")
print(f"и) 0<y≤4 и x<5: {0<y and y<=4 and x<5}")

print("\nЗадание 3.28")
print(f"A={A}, B={B}, C={C}")
print(f"а) A>100 и B>100: {A>100 and B>100}")
print(f"б) только одно четное: {(A%2==0 and B%2!=0) or (A%2!=0 and B%2==0)}")
print(f"в) хотя бы одно положительное: {A>0 or B>0}")
print(f"г) все кратны 3: {A%3==0 and B%3==0 and C%3==0}")
print(f"д) только одно <50: {(A<50 and B>=50 and C>=50) or (A>=50 and B<50 and C>=50) or (A>=50 and B>=50 and C<50)}")
print(f"е) хотя бы одно отрицательное: {A<0 or B<0 or C<0}")

