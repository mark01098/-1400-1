print(f"c) A and B A and C or (not C) = {result_c}")
#11 
x,y = 1, 1
result_x = (x ** 2 + y ** 2) <= 4
print(f"x) x ** 2 + y ** 2 == 4 при x = {x} y = {y} --> {result_x}")

x,y = 1, 2
result_y = (x >= 0) or (y ** 2 != 4) 
print(f"y) (x >= 0) or (y ** 2 != 4) при x = {x} y = {y} --> {result_y}")

x,y = 1, 2
result_z = (x >= 0) and (y ** 2 != 4) 
print(f"z) (x >= 0) and (y ** 2 != 4) при x = {x} y = {y} --> {result_z}")

x,y = 2,1 
result_d = (x * y != 0) and (y > x)
print(f"d) (x * y != 0) and (y > x) при x = {x} y = {y} --> {result_d}")

x, y = 2, 1 
result_e = (x * y != 0) or (y < x)
print(f"e) (x * y != 0) or (y < z) при x = {x} y = {y} --> {result_e}")

x, y = 2, 1 
result_s = ((not (x * y < 0))) and (y > x) 
print(f"s) ((not (x * y < 0))) and (y > x) при x = {x} y = {y} --> {result_s}")

x, y = 1, 2
result_f = ((not (x * y < 0))) or (y > x) 
print(f"f) ((not (x * y < 0))) or (y > x) при x = {x} y = {y} --> {result_f}")


print("Задание 3.16")
for X in [True, False]:
    for Y in [True, False]:
        result_a = (not X) and (not Y)
        result_b = X or ((not X) and Y)
        result_c = ((not X) and Y) or Y
        print(f"X={X}, Y={Y}: a) {result_a}, б) {result_b}, в) {result_c}")

print("\nЗадание 3.17")
for A in [True, False]:
    for B in [True, False]:
        result_a = ((not A) and (not B)) or A
        result_b = B or ((not A) and (not B))
        result_c = B and (not (A and (not B)))
        print(f"A={A}, B={B}: a) {result_a}, б) {result_b}, в) {result_c}")

