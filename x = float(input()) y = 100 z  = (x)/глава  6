#  6.115
import math


def f1(x):
    return x4 + 2*x3 - x - 1
def f2(x):
    return x3 - 0.2*x2 - 0.2*x - 1.2
def bisection(f, a, b, eps=0.001):
    if f(a) * f(b) > 0:
        return None
    while b - a > eps:
        c = (a + b) / 2
        if f(c) == 0:
            return c
        if f(a) * f(c) < 0:
            b = c
        else:
            a = c
    return (a + b) / 2
root1 = bisection(f1, 0, 1)
print(f"Корень уравнения x^4+2x^3-x-1=0 на [0,1]: {root1:.3f}")
root2 = bisection(f2, 1, 1.5)
print(f"Корень уравнения x^3-0.2x^2-0.2x-1.2=0 на [1,1.5]: {root2:.3f}")
