n = int(input("Введите натуральное число: "))
a = input("Введите цифру a: ")
b = input("Введите цифру b: ")
digits = list(str(n))
pos_a = -1
pos_b = -1
for i in range(len(digits)-1, -1, -1):  
    if digits[i] == a and pos_a == -1:
        pos_a = i
    if digits[i] == b and pos_b == -1:
        pos_b = i
if pos_a == -1 and pos_b == -1:
    print(f"Ни цифры {a}, ни цифры {b} нет")
elif pos_a == -1:
    print(f"Цифры {a} нет, есть только {b}")
elif pos_b == -1:
    print(f"Цифры {b} нет, есть только {a}")
elif pos_a > pos_b:  
    print(f"Цифра {a} правее цифры {b}")
else:
    print(f"Цифра {b} правее цифры {a}")

