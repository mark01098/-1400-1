# 6.22
n = int(input())
last = n % 10
count_3 = 0
count_last = 0
count_even = 0
sum_g5 = 0
prod_g7 = 1
count_0_5 = 0
while n > 0:
    d = n % 10
    if d == 3:
        count_3 += 1
    if d == last:
        count_last += 1
    if d % 2 == 0:
        count_even += 1
    if d > 5:
        sum_g5 += d
    if d > 7:
        prod_g7 *= d
    if d == 0 or d == 5:
        count_0_5 += 1
    n //= 10
print("Цифр 3:", count_3)
print("Последняя цифра встречается:", count_last)
print("Чётных цифр:", count_even)
print("Сумма цифр > 5:", sum_g5)
print("Произведение цифр > 7:", prod_g7)
print("Цифр 0 и 5:", count_0_5)

# 6.23
n = int(input())
a = int(input())
z = int(input())
x = int(input())
y = int(input())
count_a = 0
count_z = 0
sum_ga = 0
count_xy = 0
while n > 0:
    d = n % 10
    if d == a:
        count_a += 1
    if d % z == 0:
        count_z += 1
    if d > a:
        sum_ga += d
    if d == x or d == y:
        count_xy += 1
    n //= 10
print("Цифр a:", count_a)
print("Цифр, кратных z:", count_z)
print("Сумма цифр > a:", sum_ga)
print("Цифр x и y:", count_xy)

