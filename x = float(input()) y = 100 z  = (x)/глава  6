# 6.6
nums = []
for _ in range(15):
    nums.append(int(input()))
n = int(input())
s = 0
for num in nums:
    if num < n:
        s += num
    else:
        break
print("Сумма меньших n:", s)
for i in range(14):
    if nums[i] < n < nums[i+1]:
        print("Между:", nums[i], "и", nums[i+1])
        break

