    if d == '2' and pos_2 == -1:
        pos_2 = i
    if d == '5' and pos_5 == -1:
        pos_5 = i
if pos_2 == -1 and pos_5 == -1:
    print("Ни цифры 2, ни цифры 5 нет")
elif pos_2 == -1:
    print("Цифры 2 нет, есть только 5")
elif pos_5 == -1:
    print("Цифры 5 нет, есть только 2")
elif pos_2 < pos_5:
    print("Цифра 2 левее цифры 5")
else:
    print("Цифра 5 левее цифры 2")

