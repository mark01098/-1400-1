#  6.91 

n = int(input("Введите натуральное число: "))
digits = list(map(int, str(n)))
count = len(digits)
sum_d = sum(digits)
prod = 1
for d in digits:
    prod *= d
avg = sum_d / count
sum_sq = sum(d*d for d in digits)
sum_cube = sum(d*d*d for d in digits)
first = digits[0]
last = digits[-1]
sum_first_last = first + last

print(f"Количество цифр: {count}")
print(f"Сумма цифр: {sum_d}")
print(f"Произведение цифр: {prod}")
print(f"Среднее арифметическое цифр: {avg}")
print(f"Сумма квадратов цифр: {sum_sq}")
print(f"Сумма кубов цифр: {sum_cube}")
print(f"Первая цифра: {first}")
print(f"Сумма первой и последней цифры: {sum_first_last}")

