n = int(input("Введите число: "))
max1 = max2 = -1
min1 = min2 = 10
temp = n
while temp > 0:
    d = temp % 10
    if d > max1:
        max2 = max1
        max1 = d
    elif d > max2:
        max2 = d
    if d < min1:
        min2 = min1
        min1 = d
    elif d < min2:
        min2 = d
    temp //= 10
print("Две максимальные:", max1, max2)
print("Две минимальные:", min1, min2)

# 6.42 

n = int(input("Введите число (все цифры разные): "))
max1 = -1
max2 = -1
temp = n
while temp > 0:
    d = temp % 10
    if d > max1:
        max2 = max1
        max1 = d
    elif d > max2:
        max2 = d
    temp //= 10
temp = n
pos = 1
pos1_end = pos2_end = -1
while temp > 0:
    d = temp % 10
    if d == max1:
        pos1_end = pos
    elif d == max2:
        pos2_end = pos
    temp //= 10
    pos += 1
length = len(str(n))
temp = n
pos = 1
pos1_start = pos2_start = -1
while temp > 0:
    d = temp % 10
    if d == max1:
        pos1_start = length - pos + 1
    elif d == max2:
        pos2_start = length - pos + 1
    temp //= 10
    pos += 1
print("Две максимальные цифры:", max1, max2)
print("Их номера от конца:", pos1_end, pos2_end)
print("Их номера от начала:", pos1_start, pos2_start)

# 6.43 

print("Вводите числа в порядке неубывания, конец — 1000:")
prev = None
count_equal = 1
total_equal = 0
different = 0
while True:
    x = int(input())
    if x == 1000:
        break
    if prev is None:
        prev = x
        different = 1
    else:
        if x == prev:
            count_equal += 1
        else:
            if count_equal > 1:
                total_equal += count_equal
            count_equal = 1
            different += 1
            prev = x
if count_equal > 1:
    total_equal += count_equal
print("Равных подряд:", total_equal)
print("Разных чисел:", different)

#  6.44 

print("Вводите числа в порядке невозрастания, конец — 0:")
prev = None
different = 0
while True:
    x = int(input())
    if x == 0:
        break
    if prev is None or x != prev:
        different += 1
        prev = x
print("Разных чисел:", different)

#  6.45
def nod(a, b):
    while b != 0:
        a, b = b, a % b
    return a
a = int(input("a: "))
b = int(input("b: "))
c = int(input("c: "))
nod_ab = nod(a, b)
nod_abc = nod(nod_ab, c)
print("НОД трёх чисел:", nod_abc)


# 6.46 
n = int(input("Введите число: "))
# а) Сумма цифр >10
s = 0
temp = n
while temp > 0:
    s += temp % 10
    temp //= 10
print("Сумма цифр >10:", "ДА" if s > 10 else "НЕТ")
# б) Произведение <50
temp = n
p = 1
while temp > 0:
    p *= temp % 10
    temp //= 10
print("Произведение <50:", "ДА" if p < 50 else "НЕТ")
# в) Чётное количество цифр
temp = n
count = 0
while temp > 0:
    count += 1
    temp //= 10
print("Чётное количество цифр:", "ДА" if count % 2 == 0 else "НЕТ")
# г) Четырёхзначное
print("Четырёхзначное:", "ДА" if 1000 <= n <= 9999 else "НЕТ")
# д) Первая цифра ≤6
first = int(str(n)[0])
print("Первая цифра ≤6:", "ДА" if first <= 6 else "НЕТ")
# е) Начинается и заканчивается одинаково
last = n % 10
print("Начинается и заканчивается одинаково:", "ДА" if first == last else "НЕТ")
# ж) Какая цифра больше: первая или последняя
if first > last:
    print("Первая цифра больше последней")
elif first < last:
    print("Последняя цифра больше первой")
else:
    print("Первая и последняя цифры равны")

