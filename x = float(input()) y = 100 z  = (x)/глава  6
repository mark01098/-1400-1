    year += 1
    yield_per_ha *= 1.02
print(f"Урожайность превысит 22 ц/га в год {year}")
area = 100
year = 1
while area <= 120:
    year += 1
    area *= 1.05
print(f"Площадь превысит 120 га в год {year}")

area = 100
yield_per_ha = 20
total_yield = 0
year = 1
while total_yield <= 800:
    total_yield += area * yield_per_ha
    year += 1
    area *= 1.05
    yield_per_ha *= 1.02
print(f"Общий урожай превысит 800 ц в год {year-1}")

