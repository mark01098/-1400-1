#  6.77 

n = int(input("Введите число: "))
a, b = 1, 1
is_fibonacci = False
while a <= n:
    if a == n:
        is_fibonacci = True
        break
    a, b = b, a + b
print("Число является членом Фибоначчи:", "ДА" if is_fibonacci else "НЕТ")

#  6.78 
# Является ли число членом арифметической прогрессии
n = int(input("Введите число n: "))
f = int(input("Введите первый член прогрессии f: "))
s = int(input("Введите шаг прогрессии s: "))
if s == 0:
    print("Шаг не может быть 0")
else:
    if (n - f) % s == 0 and (n - f) // s >= 0:
        print("Число является членом арифметической прогрессии: ДА")
    else:
        print("Число является членом арифметической прогрессии: НЕТ")

#  6.79

n = int(input("Введите число m: "))
g = int(input("Введите первый член g: "))
z = int(input("Введите знаменатель z: "))
if z == 0 or g == 0:
    print("Неверные данные")
else:
    temp = n
    is_geometric = False
    if temp % g == 0:
        temp //= g
        while temp >= z:
            if temp == 1:
                is_geometric = True
                break
            if temp % z != 0:
                break
            temp //= z
        if temp == 1:
            is_geometric = True
    print("Число является членом геометрической прогрессии:", "ДА" if is_geometric else "НЕТ")

