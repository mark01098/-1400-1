    swapped = n[-1] + n[1:-1] + n[0]
    print(f"Первая и последняя цифры поменяны: {swapped}")
else:
    print("Число однозначное, перестановка невозможна")
doubled = n + n
print(f"Приписали такое же число: {doubled}")

#  6.111 
factorial = int(input("Введите факториал: "))
n = 1
prod = 1
while prod < factorial:
    n += 1
    prod *= n
if prod == factorial:
    print(f"Число: {n}")
else:
    print("Это не факториал натурального числа")

#  6.112 
n = int(input("Введите натуральное число: "))
temp = n
pos = 0
rightmost_3_pos = 0
while temp > 0:
    pos += 1
    if temp % 10 == 3:
        rightmost_3_pos = pos
    temp //= 10
print(f"Номер самой правой цифры 3 от конца: {rightmost_3_pos}")

#  6.113 
n = int(input("Введите натуральное число: "))
m = int(input("Введите m: "))
temp = n
sum_last = 0
for _ in range(m):
    if temp == 0:
        break
    sum_last += temp % 10
    temp //= 10
print(f"Сумма {m} последних цифр: {sum_last}")

