    product *= num
    print(product)
n = int(input(""))
print("0\n")
#6.7
sequence = []
print("Введите 18 целых чисел:")
for i in range(18):
    sequence.append(int(input(f"a{i+1}: ")))
count = 0
i = 0
while i < 18 and sequence[i] == sequence[0]:
    count += 1
    i += 1
print(f"Количество равных элементов в начале: {count}\n")
