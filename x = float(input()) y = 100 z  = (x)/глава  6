# 6.28
n = int(input("Введите натуральное число с различными цифрами: "))
max_d = -1
min_d = 10
pos_max_end = -1
pos_min_end = -1
pos_max_start = -1
pos_min_start = -1
temp = n
pos = 0
while temp > 0:
    d = temp % 10
    if d > max_d:
        max_d = d
        pos_max_end = pos
    if d < min_d:
        min_d = d
        pos_min_end = pos
    temp //= 10
    pos += 1
length = pos
temp = n
pos = 0
while temp > 0:
    d = temp % 10
    if d == max_d:
        pos_max_start = length - pos - 1
    if d == min_d:
        pos_min_start = length - pos - 1
    temp //= 10
    pos += 1
print("Максимальная цифра:", max_d)
print("Её номер от конца:", pos_max_end)
print("Её номер от начала:", pos_max_start)
print("Минимальная цифра:", min_d)
print("Её номер от конца:", pos_min_end)
print("Её номер от начала:", pos_min_start)

