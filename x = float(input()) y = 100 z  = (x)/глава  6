#6.1
sum = 0
count = 0
num = int(input(""))
while num != 0:
    sum += num 
    count += 1
    num = int(input(""))
print(f"{sum}")
print(f"{count}")
#6.2
sum = 0
count = 0 
num = int(input(""))
while num >= 0:
    sum += num
    count += 1
    num = int(input(""))
if count > 0 :
    avarage = sum / count
    print(f"{sum}")
else:
    print(f"{count}")
elif:
    print(f"{avarage}")
#6.3
n = int(input(""))
sum1 = 0 
sum2 = 0 
i = 0 
while i < n :
    x = int(input(""))
    sum2 = (input(x) & 1 ) * x
    sum1 += sum2 
    i = (input(x) & 1) 
print(f"{sum1}")
