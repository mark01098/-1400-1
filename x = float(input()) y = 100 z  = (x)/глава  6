sequence = []
print("Введите 15 вещественных чисел, упорядоченных по возрастанию:")
for i in range(15):
    sequence.append(float(input(f"a{i+1}: ")))
n = float(input("Введите число n: "))
sum_less = 0
i = 0
while i < 15 and sequence[i] < n:
    sum_less += sequence[i]
    i += 1
print(f"Сумма чисел, меньших n: {sum_less}")
for i in range(14):
    if sequence[i] < n < sequence[i+1]:
        print(f"Интервал: элементы {i+1} ({sequence[i]}) и {i+2} ({sequence[i+1]})")
        break
print()
