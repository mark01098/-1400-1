#  6.106 
a = int(input("Введите a: "))
b = int(input("Введите b (b > 0): "))
quotient = 0
temp = a
while temp >= b:
    temp -= b
    quotient += 1
print(f"Целочисленное деление {a} на {b}: {quotient}")
remainder = a
while remainder >= b:
    remainder -= b
print(f"Остаток от деления {a} на {b}: {remainder}")

#  6.107 =
m = int(input("Введите m: "))
n = int(input("Введите n: "))
limit = m * n
print("Числа, кратные m и n:")
for i in range(1, limit + 1):
    if i % m == 0 and i % n == 0:
        print(i, end=' ')
print()

print("Числа, кратные m и n (способ 2):")
k = 1
while True:
    multiple = m * n * k
    if multiple <= limit:
        print(multiple, end=' ')
        k += 1
    else:
        break
print()

# 6.108 
n = int(input("Введите сумму: "))
denominations = [64, 32, 16, 8, 4, 2, 1]
print(f"Сумма {n} руб. выплачивается:")
for d in denominations:
    count = n // d
    if count > 0:
        print(f"Купюр по {d} руб.: {count}")
        n %= d

#  6.109 
n = int(input("Введите натуральное число: "))
temp = n
sign = 1
sum1 = 0
while temp > 0:
    digit = temp % 10
    sum1 += sign * digit
    sign *= -1
    temp //= 10
print(f"Знакочередующаяся сумма (от младших): {sum1}")

digits = list(map(int, str(n)))
sign = 1
sum2 = 0
for digit in digits:
    sum2 += sign * digit
    sign *= -1
print(f"Знакочередующаяся сумма (от старших): {sum2}")

