# 10.37. Прямоугольник из звездочек
print("\n10.37. Прямоугольник из звездочек:")
print("Способ 1 (без использования процедуры):")

def priamougolnik_sposob1(shirina, vysota):
    """Рисует прямоугольник - способ 1"""
    # Верхняя линия
    print('*' * shirina)
    
    # Боковые стороны
    for _ in range(vysota - 2):
        print('*' + ' ' * (shirina - 2) + '*')
    
    # Нижняя линия (если высота > 1)
    if vysota > 1:
        print('*' * shirina)

# Пример
print("Прямоугольник 20x5:")
priamougolnik_sposob1(20, 5)

print("\nСпособ 2 (с использованием процедуры):")

def priamougolnik_sposob2(shirina, vysota):
    """Рисует прямоугольник - способ 2"""
    # Верхняя линия
    risovat_goriz_liniju(shirina)
    
    # Боковые стороны
    for _ in range(vysota - 2):
        print('*' + ' ' * (shirina - 2) + '*')
    
    # Нижняя линия (если высота > 1)
    if vysota > 1:
        risovat_goriz_liniju(shirina)

# Пример
print("Прямоугольник 15x4:")
priamougolnik_sposob2(15, 4)

# 10.38. Обмен значениями
print("\n10.38. Обмен значениями:")

def obmen(a, b):
    """Меняет значения двух переменных местами"""
    return b, a

# Пример
x = 10
y = 20
c = 30
d = 40

print(f"До обмена: x={x}, y={y}, c={c}, d={d}")

# Обмениваем значениями
x, y = obmen(x, y)
c, d = obmen(c, d)

print(f"После обмена: x={x}, y={y}, c={c}, d={d}")

# 10.39. Периметр и площадь двух треугольников
print("\n10.39. Треугольники:")

def triangle_info(a, b, c):
    """Вычисляет периметр и площадь треугольника"""
    # Проверяем, можно ли построить треугольник
    if a + b > c and a + c > b and b + c > a:
        # Периметр
        P = a + b + c
        
        # Полупериметр для формулы Герона
        p = P / 2
        
        # Площадь по формуле Герона
        S = (p * (p - a) * (p - b) * (p - c)) ** 0.5
        
        return P, S
    else:
        return None, None  # треугольник нельзя построить

# Примеры
triangle1 = (3, 4, 5)  # стороны первого треугольника
triangle2 = (5, 12, 13)  # стороны второго треугольника

P1, S1 = triangle_info(*triangle1)
P2, S2 = triangle_info(*triangle2)

print(f"Треугольник 1: стороны {triangle1}")
if P1 is not None:
    print(f"  Периметр: {P1}, Площадь: {S1:.2f}")
else:
    print("  Такой треугольник нельзя построить")

print(f"Треугольник 2: стороны {triangle2}")
if P2 is not None:
    print(f"  Периметр: {P2}, Площадь: {S2:.2f}")
else:
    print("  Такой треугольник нельзя построить")

if P1 is not None and P2 is not None:
    print(f"\nСумма периметров: {P1 + P2}")
    print(f"Сумма площадей: {S1 + S2:.2f}")

# 10.40. Трапеции
print("\n10.40. Равнобедренные трапеции:")

def trapezium_info(a, b, h):
    """Вычисляет периметр и площадь равнобедренной трапеции"""
    # a - большее основание
    # b - меньшее основание
    # h - высота
    
    # Находим боковую сторону по теореме Пифагора
    # Разница оснований
    diff = (a - b) / 2
    
    # Боковая сторона
    side = (diff ** 2 + h ** 2) ** 0.5
    
    # Периметр
    P = a + b + 2 * side
    
    # Площадь
    S = (a + b) * h / 2
    
    return P, S

P1, S1 = trapezium_info(*trap1)
P2, S2 = trapezium_info(*trap2)

print(f"Трапеция 1: большее основание={trap1[0]}, меньшее={trap1[1]}, высота={trap1[2]}")
print(f"  Периметр: {P1:.2f}, Площадь: {S1:.2f}")

print(f"Трапеция 2: большее основание={trap2[0]}, меньшее={trap2[1]}, высота={trap2[2]}")
print(f"  Периметр: {P2:.2f}, Площадь: {S2:.2f}")

