def ramka_sposob2():
    """Рисует рамку из звездочек - способ 2"""
    # Верхняя линия
    risovat_liniju_80()
    
    # Боковые линии
    for _ in range(20):  # 20 строк высоты
        print('*' + ' ' * 78 + '*')
    
    # Нижняя линия
    risovat_liniju_80()

# Вызываем процедуру
ramka_sposob2()

