deviations = []
for i in range(len(rainfall)):
    dev = rainfall[i] - avg_rain
    deviations.append(dev)

# 11.97
arr = [15, 5, 25, 8, 30, 12, 18, 7, 22]
avg = sum(arr) / len(arr)
closest_val = arr[0]
min_diff = abs(arr[0] - avg)
for i in range(1, len(arr)):
    diff = abs(arr[i] - avg)
    if diff < min_diff:
        min_diff = diff
        closest_val = arr[i]

# 11.98
arr = [1, 3, 5, 2, 4, 6, 8, 3, 7, 2,
       5, 9, 4, 6, 3, 8, 2, 7, 5, 4]
max_sum = 0
max_start = 0
for i in range(len(arr) - 4):
    curr_sum = arr[i] + arr[i+1] + arr[i+2] + arr[i+3] + arr[i+4]
    if curr_sum > max_sum:
        max_sum = curr_sum
        max_start = i

# 11.100
arr = [1, 3, 5, 2, 4, 3, 6, 8, 7, 9]
has_duplicate = False
n = len(arr)
for i in range(n):
    for j in range(i + 1, n):
        if arr[i] == arr[j]:
            has_duplicate = True
            break
    if has_duplicate:
        break

# 11.101 и 11.102
arr = [1, 3, 5, 2, 4, 3, 6, 8, 7, 9]
duplicate_val = None
counts = {}
for x in arr:
    if x in counts:
        counts[x] += 1
    else:
        counts[x] = 1

# Проверка на ровно два одинаковых элемента
exactly_two = False
for val, cnt in counts.items():
    if cnt == 2:
        exactly_two = True
        duplicate_val = val
        break

# Если нужно найти значения (11.102)
if exactly_two:
    for val, cnt in counts.items():
        if cnt == 2:
            duplicate_val = val

print(f"\nСумма периметров: {P1 + P2:.2f}")
print(f"Сумма площадей: {S1 + S2:.2f}")
