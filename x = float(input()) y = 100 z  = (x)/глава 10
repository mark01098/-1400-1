def ramka_sposob1():
    """Рисует рамку из звездочек - способ 1"""
    # Верхняя линия
    print('*' * 80)
    
    # Боковые линии
    for _ in range(20):  # 20 строк высоты
        print('*' + ' ' * 78 + '*')
    
    # Нижняя линия
    print('*' * 80)

# Вызываем процедуру
ramka_sposob1()

